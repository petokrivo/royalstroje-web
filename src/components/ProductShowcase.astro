    box-shadow: 0 0 15px rgba(255, 102, 0, 0.6);
  }

  .scan-line-1 {
    top: 20%;
    animation: scanMove 6s linear infinite;
  }

  .scan-line-2 {
    top: 50%;
    animation: scanMove 8s linear infinite;
    animation-delay: 2s;
  }

  .scan-line-3 {
    top: 75%;
    animation: scanMove 7s linear infinite;
    animation-delay: 4s;
