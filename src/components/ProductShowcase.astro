      opacity: 0;
    }
    10% {
      opacity: 0.7;
    }
    90% {
      opacity: 0.7;
    }
    100% {
      transform: translateY(200px);
      opacity: 0;
    }
  }

  /* Light beams */
  .light-beam {
    position: absolute;
    width: 250px;
    height: 100%;
    background: linear-gradient(90deg, 
      transparent, 
      rgba(255, 102, 0, 0.2) 50%, 
      transparent
    );
    transform: skewX(-15deg);
    opacity: 0;
  }

  .light-beam-1 {
    left: -250px;
    animation: beamSweep 8s ease-in-out infinite;
  }

  .light-beam-2 {
    left: -250px;
    animation: beamSweep 10s ease-in-out infinite;
    animation-delay: 4s;
  }

  @keyframes beamSweep {
    0%, 100% {
      left: -250px;
      opacity: 0;
    }
    50% {
      left: calc(100% + 250px);
      opacity: 0.6;
    }
  }

  /* Pulsing glow orbs */
  .glow-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.4;
  }

  .glow-orb-1 {
    top: 10%;
    left: 15%;
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(255, 102, 0, 0.6) 0%, transparent 70%);
