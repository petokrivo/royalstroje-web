    bottom: 10%;
    right: 15%;
    width: 250px;
    height: 250px;
    background: radial-gradient(circle, rgba(255, 133, 51, 0.6) 0%, transparent 70%);
    animation: orbPulse 5s ease-in-out infinite;
    animation-delay: 2s;
  }

  @keyframes orbPulse {
    0%, 100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.2);
    }
  }

  /* Animated border edges */
  .border-glow {
    position: absolute;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, 
      transparent 0%, 
