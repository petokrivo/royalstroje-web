---

<header class="fixed top-0 left-0 right-0 z-[1000] bg-black border-b-2 border-[#FF6600]" id="rsHeader">
  <div class="max-w-[1800px] mx-auto px-4 md:px-6 lg:px-8 xl:px-12 2xl:px-16">
    <div class="flex items-center justify-between h-[85px]">
      
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 lg:gap-4 z-[1001] shrink-0">
        <img src="/logo.png" alt="ROYAL STROJE" class="h-[55px] w-auto" />
        <div class="flex flex-col">
          <span class="hidden md:block text-white font-bold text-base lg:text-lg leading-tight">Požičovňa náradia</span>
          <span class="hidden md:block text-white font-bold text-base lg:text-lg leading-tight">a stavebnej techniky</span>
          <span class="block md:hidden text-white font-bold text-sm">Požičovňa</span>
        </div>
      </a>

      <!-- Desktop Navigation + CTA -->
      <div class="hidden lg:flex items-center gap-6 xl:gap-8">
        <!-- Main Navigation -->
        <nav class="flex gap-1">
          {mainNav.map((item) => (
            <div class="relative group">
              <a 
                href={item.url} 
                class="flex items-center gap-2 px-4 py-3 text-white font-semibold text-[0.95rem] rounded-lg transition-all duration-300 hover:bg-[#FF6600] whitespace-nowrap"
              >
                {item.name}
                {item.hasDropdown && (
                  <svg class="w-4 h-4 transition-transform duration-300 group-hover:rotate-180" viewBox="0 0 20 20" fill="currentColor">
