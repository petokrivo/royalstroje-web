      {mainNav.map((item) => (
        <div class="relative group">
          <a href={item.url} class="flex items-center gap-2 px-5 py-3 text-white font-semibold text-[0.95rem] rounded-lg transition-all duration-300 hover:bg-[#FF6600] whitespace-nowrap">
