    <nav class="mobile-nav">
      {mainNav.map((item) => (
        <a href={item.url} class="mobile-link">{item.name}</a>
      ))}
    </nav>
  </div>
</header>

<!-- Header Spacer -->
<div class="header-spacer"></div>

<style>
  /* Variables */
  :root {
    --orange-primary: #FF6600;
    --orange-secondary: #f19000;
    --black: #000000;
    --white: #ffffff;
    --gray-light: #f5f5f5;
    --gray-dark: #333333;
  }

  /* Header Base */
  .rs-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: var(--black);
    border-bottom: 2px solid var(--orange-primary);
    transition: all 0.3s ease;
  }

  .rs-header.scrolled {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .rs-header.scrolled .logo-img {
    height: 45px;
  }

  .header-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 90px;
    transition: height 0.3s ease;
  }

  .rs-header.scrolled .header-container {
    height: 70px;
  }

  /* Logo */
  .logo-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    z-index: 1001;
  }

  .logo-img {
    height: 60px;
    width: auto;
    transition: all 0.3s ease;
  }

  /* Desktop Navigation */
  .desktop-nav {
    display: none;
    gap: 0.5rem;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    color: var(--white);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .nav-link:hover {
    background: var(--orange-primary);
    color: var(--white);
  }

  .dropdown-icon {
    width: 18px;
    height: 18px;
    transition: transform 0.3s ease;
  }

  .nav-item:hover .dropdown-icon {
    transform: rotate(180deg);
  }

  /* Mega Dropdown */
  .mega-dropdown {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    width: 1100px;
    max-width: 90vw;
    background: var(--black);
    border: 2px solid var(--orange-primary);
    border-radius: 12px;
    margin-top: 1rem;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 10px 40px rgba(255, 102, 0, 0.2);
  }

  .nav-item:hover .mega-dropdown {
    opacity: 1;
    visibility: visible;
    margin-top: 0.5rem;
  }

  .mega-content {
    padding: 2rem;
  }

  .mega-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .mega-column {
    min-width: 0;
  }

  .mega-title {
    margin: 0 0 1rem;
    font-size: 1.1rem;
    font-weight: 700;
  }

  .mega-title a {
    color: var(--orange-primary);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .mega-title a:hover {
    color: var(--orange-secondary);
  }

  .mega-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .mega-list li {
    margin-bottom: 0.5rem;
  }

  .mega-list a {
    color: var(--white);
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .mega-list a:hover {
    color: var(--orange-primary);
    transform: translateX(5px);
  }

  /* Desktop Actions */
  .desktop-actions {
    display: none;
    align-items: center;
    gap: 1.5rem;
  }

  .online-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 102, 0, 0.1);
    border: 1px solid var(--orange-primary);
    border-radius: 50px;
  }

  .pulse-dot {
    width: 8px;
    height: 8px;
    background: var(--orange-primary);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.2); }
  }

  .online-text {
    color: var(--orange-primary);
    font-weight: 700;
    font-size: 0.85rem;
    letter-spacing: 0.5px;
  }

  .phone-btn {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, var(--orange-primary), var(--orange-secondary));
    color: var(--white);
    text-decoration: none;
    font-weight: 700;
    font-size: 1rem;
    border-radius: 50px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(255, 102, 0, 0.3);
  }

  .phone-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 102, 0, 0.5);
  }

  .phone-btn svg {
    width: 20px;
    height: 20px;
  }

  /* Mobile Toggle */
  .mobile-toggle {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: 40px;
    height: 40px;
    background: transparent;
    border: 2px solid var(--orange-primary);
    border-radius: 8px;
    cursor: pointer;
    padding: 8px;
    z-index: 1001;
  }

  .mobile-toggle span {
    width: 100%;
    height: 3px;
    background: var(--orange-primary);
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  .mobile-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(6px, 6px);
  }

  .mobile-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
  }

  /* Mobile Menu */
  .mobile-menu {
    position: fixed;
    top: 90px;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--black);
    transform: translateX(-100%);
    transition: transform 0.3s ease;
    overflow-y: auto;
    z-index: 999;
  }

  .mobile-menu.active {
    transform: translateX(0);
  }

  .mobile-nav {
    display: flex;
    flex-direction: column;
    padding: 2rem;
    gap: 0.5rem;
  }

  .mobile-link {
    padding: 1.25rem;
    color: var(--white);
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    border-bottom: 1px solid rgba(255, 102, 0, 0.2);
    transition: all 0.3s ease;
  }

  .mobile-link:hover {
    background: var(--orange-primary);
    border-radius: 8px;
  }

  /* Header Spacer */
  .header-spacer {
    height: 90px;
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .desktop-nav {
      display: flex;
    }

    .desktop-actions {
      display: flex;
    }

    .mobile-toggle {
      display: none;
    }

    .mobile-menu {
      display: none;
    }
  }

  /* Tablet */
  @media (max-width: 1023px) and (min-width: 768px) {
    .mega-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Mobile */
  @media (max-width: 767px) {
    .header-container {
      padding: 0 1rem;
      height: 70px;
    }

    .rs-header.scrolled .header-container {
      height: 60px;
    }

    .logo-img {
      height: 50px;
    }

    .rs-header.scrolled .logo-img {
      height: 40px;
    }

    .header-spacer {
      height: 70px;
    }

    .mobile-menu {
      top: 70px;
    }

    .rs-header.scrolled + .header-spacer {
      height: 60px;
    }
  }
</style>

<script>
  // Header scroll functionality
  const header = document.getElementById('rsHeader');
  const mobileToggle = document.getElementById('mobileToggle');
  const mobileMenu = document.getElementById('mobileMenu');

  // Scroll detection
  let lastScroll = 0;
  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;
    
    if (currentScroll > 50) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }
    
    lastScroll = currentScroll;
  });

  // Mobile menu toggle
  mobileToggle?.addEventListener('click', () => {
    mobileToggle.classList.toggle('active');
    mobileMenu?.classList.toggle('active');
    document.body.style.overflow = mobileMenu?.classList.contains('active') ? 'hidden' : '';
  });

  // Close mobile menu when clicking links
  const mobileLinks = document.querySelectorAll('.mobile-link');
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileToggle?.classList.remove('active');
      mobileMenu?.classList.remove('active');
      document.body.style.overflow = '';
    });
  });

  // Close mobile menu on escape
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && mobileMenu?.classList.contains('active')) {
      mobileToggle?.classList.remove('active');
      mobileMenu?.classList.remove('active');
      document.body.style.overflow = '';
    }
  });

  // Close mega menu when clicking outside
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (!target.closest('.nav-item')) {
      // Close all mega menus
    }
  });
</script>