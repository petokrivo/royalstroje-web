    justify-content: space-between;
    padding: 1.5rem;
    background: linear-gradient(135deg, rgba(249, 115, 22, 0.1) 0%, rgba(249, 115, 22, 0.05) 100%);
    border: 1px solid rgba(249, 115, 22, 0.2);
    border-radius: 16px;
  }

  .cta-content h4 {
    margin: 0 0 0.25rem;
    font-size: 1rem;
    font-weight: 800;
    color: white;
  }

  .cta-content p {
    margin: 0;
    font-size: 0.875rem;
    color: var(--zinc-400);
  }

  .cta-button {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, var(--orange-500), var(--orange-600));
    color: white;
    text-decoration: none;
    font-weight: 700;
    font-size: 0.9375rem;
    border-radius: 12px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(249, 115, 22, 0.3);
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(249, 115, 22, 0.5);
  }

  .cta-button svg {
    width: 18px;
    height: 18px;
  }

  /* Desktop Actions */
  .desktop-actions {
    display: none;
    align-items: center;
    gap: 1rem;
  }

  .status-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(249, 115, 22, 0.1);
    border: 1px solid rgba(249, 115, 22, 0.3);
    border-radius: 50px;
  }

  .status-dot {
    width: 8px;
    height: 8px;
    background: var(--orange-500);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.2);
    }
  }

  .status-text {
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--orange-500);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .phone-button {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, var(--orange-500), var(--orange-600));
    color: white;
    text-decoration: none;
    font-weight: 700;
    border-radius: 12px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(249, 115, 22, 0.3);
  }

  .phone-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(249, 115, 22, 0.5);
  }

  .phone-button svg {
    width: 18px;
    height: 18px;
  }

  .phone-text {
    font-size: 0.9375rem;
  }

  /* Mobile Toggle */
  .mobile-toggle {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 48px;
    height: 48px;
    background: rgba(249, 115, 22, 0.1);
    border: 1px solid rgba(249, 115, 22, 0.2);
    border-radius: 12px;
    cursor: pointer;
    padding: 0;
    transition: all 0.3s ease;
  }

  .mobile-toggle:hover {
    background: rgba(249, 115, 22, 0.15);
    border-color: rgba(249, 115, 22, 0.3);
  }

  .toggle-line {
    width: 24px;
    height: 2.5px;
    background: var(--orange-500);
    border-radius: 2px;
    margin: 0 auto;
    transition: all 0.3s ease;
  }

  .mobile-toggle.active .toggle-line:nth-child(1) {
    transform: rotate(45deg) translateY(8px);
  }

  .mobile-toggle.active .toggle-line:nth-child(2) {
    opacity: 0;
  }

  .mobile-toggle.active .toggle-line:nth-child(3) {
    transform: rotate(-45deg) translateY(-8px);
  }

  /* Mobile Menu */
  .mobile-menu {
    position: fixed;
    top: 80px;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, rgba(9, 9, 11, 0.98) 0%, rgba(0, 0, 0, 0.98) 100%);
    backdrop-filter: blur(40px);
    transform: translateX(100%);
    transition: transform 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    z-index: 999;
    overflow-y: auto;
  }

  .mobile-menu.active {
    transform: translateX(0);
  }

  .mobile-container {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    min-height: 100%;
  }

  /* Mobile Navigation */
  .mobile-nav {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .mobile-link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.25rem 1.5rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .mobile-link:hover {
    background: rgba(249, 115, 22, 0.1);
    border-color: rgba(249, 115, 22, 0.2);
    transform: translateX(4px);
  }

  .mobile-link-text {
    font-size: 1.125rem;
    font-weight: 700;
    color: white;
  }

  .mobile-arrow {
    width: 20px;
    height: 20px;
    color: var(--zinc-400);
  }

  /* Mobile Categories */
  .mobile-categories {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 20px;
    padding: 1.5rem;
  }

  .mobile-section-title {
    font-size: 1rem;
    font-weight: 800;
    color: var(--zinc-300);
    margin: 0 0 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .mobile-category {
    margin-bottom: 0.75rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 14px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .mobile-category[open] {
    background: rgba(249, 115, 22, 0.05);
    border-color: rgba(249, 115, 22, 0.2);
  }

  .category-toggle {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.25rem;
    cursor: pointer;
    list-style: none;
    transition: background 0.3s ease;
  }

  .category-toggle::-webkit-details-marker {
    display: none;
  }

  .category-toggle:hover {
    background: rgba(249, 115, 22, 0.05);
  }

  .toggle-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .toggle-icon {
    font-size: 1.25rem;
  }

  .toggle-title {
    font-size: 0.9375rem;
    font-weight: 700;
    color: white;
  }

  .toggle-arrow {
    width: 18px;
    height: 18px;
    color: var(--orange-500);
    transition: transform 0.3s ease;
  }

  .mobile-category[open] .toggle-arrow {
    transform: rotate(180deg);
  }

  .category-dropdown {
    padding: 0 1.25rem 1.25rem;
    animation: slideDown 0.3s ease-out;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .category-main-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    margin-bottom: 0.75rem;
    background: rgba(249, 115, 22, 0.1);
    border: 1px solid rgba(249, 115, 22, 0.25);
    border-radius: 10px;
    color: var(--orange-500);
    text-decoration: none;
    font-size: 0.8125rem;
    font-weight: 700;
    transition: all 0.3s ease;
  }

  .category-main-link:hover {
    background: rgba(249, 115, 22, 0.15);
    transform: translateX(3px);
  }

  .category-sub-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    color: var(--zinc-300);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    border-radius: 10px;
    transition: all 0.3s ease;
  }

  .category-sub-link:hover {
    background: rgba(249, 115, 22, 0.08);
    color: white;
    transform: translateX(6px);
  }

  .sub-bullet {
    color: var(--orange-500);
    opacity: 0.6;
  }

  /* Mobile Footer */
  .mobile-footer {
    margin-top: auto;
    padding: 1.5rem;
    background: linear-gradient(135deg, rgba(249, 115, 22, 0.1) 0%, rgba(249, 115, 22, 0.05) 100%);
    border: 1px solid rgba(249, 115, 22, 0.2);
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .mobile-status {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.625rem;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 10px;
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--orange-500);
    text-transform: uppercase;
  }

  .mobile-call-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, var(--orange-500), var(--orange-600));
    color: white;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 800;
    border-radius: 14px;
    transition: all 0.3s ease;
    box-shadow: 0 6px 25px rgba(249, 115, 22, 0.4);
  }

  .mobile-call-btn:active {
    transform: scale(0.98);
  }

  .mobile-call-btn svg {
    width: 20px;
    height: 20px;
  }

  /* Header Spacer */
  .header-spacer {
    height: 80px;
  }

  /* Responsive */
  @media (min-width: 1024px) {
    .desktop-nav {
      display: flex;
    }
    
    .desktop-actions {
      display: flex;
    }
    
    .mobile-toggle {
      display: none;
    }
  }

  @media (min-width: 768px) {
    .header-container {
      padding: 0 3rem;
    }
    
    .header-content {
      height: 88px;
    }
    
    .header-spacer {
      height: 88px;
    }
  }

  /* Scroll Effects */
  .pro-header.scrolled .header-content {
    height: 72px;
  }

  .pro-header.scrolled .logo-box {
    transform: scale(0.9);
  }

  .pro-header.scrolled .desktop-nav {
    font-size: 0.875rem;
  }

  /* Custom Scrollbar */
  .mobile-menu::-webkit-scrollbar,
  .mega-container::-webkit-scrollbar {
    width: 8px;
  }

  .mobile-menu::-webkit-scrollbar-track,
  .mega-container::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.3);
  }

  .mobile-menu::-webkit-scrollbar-thumb,
  .mega-container::-webkit-scrollbar-thumb {
    background: rgba(249, 115, 22, 0.4);
    border-radius: 4px;
  }

  .mobile-menu::-webkit-scrollbar-thumb:hover,
  .mega-container::-webkit-scrollbar-thumb:hover {
    background: rgba(249, 115, 22, 0.6);
  }