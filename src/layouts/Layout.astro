---
// src/layouts/Layout.astro
import Header from "../components/Header.astro";

export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { 
  title = "ROYAL STROJE - Požičovňa náradia a techniky",
  description = "Profesionálny prenájom stavebnej techniky a náradia v Seneci a okolí. Malé náradie, ťažká technika, manipulačná technika a vybavenie staveniska.",
  ogImage = "/og-image.jpg"
} = Astro.props;

const canonicalURL = Astro.url.href;
---

