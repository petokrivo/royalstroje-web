---
// src/pages/pozicovna-naradia/index.astro
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";

const categories = [
  {
    title: "Malé náradie",
    url: "/pozicovna-naradia/male-naradie",
    icon: "tools",
    description: "Ručné náradie, malá stavebná mechanizácia, vykurovacie zariadenia, čerpadlá, meracia technika, záhradná technika."
  },
  {
    title: "Stredná mechanizácia",
    url: "/pozicovna-naradia/stredna-mechanizacia",
    icon: "machinery",
    description: "Vibračné nohy a dosky, cestné píly, elektrocentrály, kompresory, miešačky a ďalšie."
  },
  {
    title: "Ťažká technika",
    url: "/pozicovna-naradia/tazka-technika",
    icon: "excavator",
    description: "Pásové mini a midi rýpadlá, veľké pásové a kolesové rýpadlá, nakladače, dumpre, valce."
  },
  {
    title: "Manipulačná technika",
    url: "/pozicovna-naradia/manipulacna-technika",
    icon: "lift",
    description: "Manipulátory, vysokozdvižné vozíky, pracovné plošiny - interiérové aj exteriérové."
  },
  {
    title: "Vybavenie staveniska",
    url: "/pozicovna-naradia/vybavenie-staveniska",
    icon: "container",
    description: "Kontajnery (kancelárske, skladové, sanitárne), vrátnice, mobilné oplotenie a zábrany, mobilné toalety."
  },
  {
    title: "Autá a prívesné vozíky",
    url: "/pozicovna-naradia/auta-privesy",
    icon: "truck",
    description: "Autá, dodávky a prívesné vozíky na prevoz techniky a materiálu."
  }
];
---

<Layout 
  title="Požičovňa náradia - ROYAL STROJE" 
  description="Profesionálny prenájom stavebnej techniky a náradia. Malé náradie, ťažká technika, manipulačná technika. Senec a celé Slovensko."
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <div class="hero-badge">Profesionálne náradie</div>
        <h1 class="hero-title">
          Požičovňa náradia pre domácich majstrov, živnostníkov a stavebné firmy
        </h1>
        <p class="hero-subtitle">
          Široký výber <span class="hero-highlight">profesionálneho náradia</span> a stavebnej techniky 
          za výhodné ceny. Od ručného náradia až po ťažkú techniku.
        </p>
      </div>
    </div>
  </section>

  <!-- Wave Transition -->
  <div class="section-wave">
    <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M321.39,56.44C187.11,91.18,121.55,126.46,0,134.64V0H1200V0C1073.5,18.55,944.72,59.95,806.04,69.46C729.84,74.58,461.25,37.34,321.39,56.44Z"/>
    </svg>
  </div>

  <!-- Categories Section -->
  <section class="categories-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Naše kategórie</h2>
        <p class="section-desc">Vyberte si z našej širokej ponuky profesionálneho náradia a techniky</p>
      </div>

      <div class="categories-grid">
        {categories.map((category, index) => (
          <a href={category.url} class="category-card" style={`animation-delay: ${index * 0.1}s`}>
            <div class="category-icon">
              {category.icon === "tools" && (
                <svg viewBox="0 0 24 24">
                  <path d="M21.71 8.71c1.25-1.25.68-2.71 0-3.42l-3-3c-1.26-1.25-2.71-.68-3.42 0L13.59 4H11C9.1 4 7 5 7 7c0 1.26.8 2.32 1.89 2.77L7 11.66c-.55-.13-1.08-.31-1.6-.31-.68 0-1.36.37-1.71.71l-1 1c-.39.39-.39 1.02 0 1.41l2.34 2.34c.39.39 1.02.39 1.41 0l1-1c.39-.39.68-1.13.68-1.71 0-.53-.21-1.04-.34-1.6l1.93-1.93c.44 1.07 1.47 1.87 2.75 1.87 1.9 0 3-2.1 3-4h2.58l1.71-1.71z"/>
                </svg>
              )}
              {category.icon === "machinery" && (
                <svg viewBox="0 0 24 24">
                  <path d="M18 3H6C4.34 3 3 4.34 3 6v3c0 1.66 1.34 3 3 3v7c0 .55.45 1 1 1s1-.45 1-1v-1h8v1c0 .55.45 1 1 1s1-.45 1-1v-7c1.66 0 3-1.34 3-3V6c0-1.66-1.34-3-3-3zM6 9c-.55 0-1-.45-1-1V6c0-.55.45-1 1-1h12c.55 0 1 .45 1 1v2c0 .55-.45 1-1 1H6zm10 7H8v-2h8v2z"/>
                </svg>
              )}
              {category.icon === "excavator" && (
                <svg viewBox="0 0 24 24">
                  <path d="M4 6l8-4 8 4v12l-8 4-8-4V6zm2 2.86v6.93l5 2.5v-6.93l-5-2.5zm12 0l-5 2.5v6.93l5-2.5V8.86z"/>
                </svg>
              )}
              {category.icon === "lift" && (
                <svg viewBox="0 0 24 24">
                  <path d="M17 11h3l-4-4-4 4h3v4h2v-4M5 5v14h3v7l4-2v-5h7c1.11 0 2-.89 2-2v-2h-2v2H10V5c0-1.11-.89-2-2-2H5z"/>
                </svg>
              )}
              {category.icon === "container" && (
                <svg viewBox="0 0 24 24">
                  <path d="M3 3h18v2H3V3zm0 16h18v2H3v-2zm0-8h18v2H3v-2z"/>
                </svg>
              )}
              {category.icon === "truck" && (
                <svg viewBox="0 0 24 24">
                  <path d="M18.92 6.01C18.72 5.42 18.16 5 17.5 5h-11c-.66 0-1.21.42-1.42 1.01L3 12v8c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-1h12v1c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-8l-2.08-5.99zM6.5 16c-.83 0-1.5-.67-1.5-1.5S5.67 13 6.5 13s1.5.67 1.5 1.5S7.33 16 6.5 16zm11 0c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zM5 11l1.5-4.5h11L19 11H5z"/>
                </svg>
              )}
            </div>
            <h3 class="category-title">{category.title}</h3>
            <p class="category-desc">{category.description}</p>
            <span class="category-link">
              Zobraziť ponuku
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14m-7-7l7 7-7 7"/>
              </svg>
            </span>
          </a>
        ))}
      </div>

      <!-- CTA Banner -->
      <div class="cta-banner">
        <div class="cta-content">
          <h3 class="cta-title">Potrebujete poradiť s výberom?</h3>
          <p class="cta-text">
            Náš tím odborníkov vám pomôže vybrať správne náradie pre váš projekt.
            Sme tu pre vás 24/7.
          </p>
          <div class="cta-buttons">
            <a href="tel:+421948555551" class="btn btn-primary">
              <svg viewBox="0 0 24 24">
                <path d="M6.62 10.79a15.05 15.05 0 006.59 6.59l2.2-2.2a1 1 0 011.01-.24c1.11.37 2.31.57 3.58.57a1 1 0 011 1v3.5a1 1 0 01-1 1C12.4 21.82 2.18 11.6 2.18 3a1 1 0 011-1H6.7a1 1 0 011 1c0 1.27.2 2.47.57 3.58a1 1 0 01-.24 1.01l-2.2 2.2z"/>
              </svg>
              0948 555 551
            </a>
            <a href="/kontakt" class="btn btn-secondary">
              Kontaktný formulár
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Royal Assistant Chat Widget (global component) -->
  <div class="royal-assistant">
    <button class="assistant-button" aria-label="Otvoriť Royal Asistent">
      <svg class="assistant-icon" viewBox="0 0 24 24">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
      </svg>
      <span class="assistant-badge"></span>
    </button>
    <div class="assistant-tooltip">Royal Asistent - Sme tu pre vás 24/7</div>
  </div>
</Layout>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    padding: 5rem 0 3rem;
    background: linear-gradient(135deg, rgba(255, 107, 0, 0.03) 0%, transparent 50%);
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: radial-gradient(circle at 1px 1px, rgba(255, 107, 0, 0.15) 1px, transparent 1px);
    background-size: 40px 40px;
    opacity: 0.3;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
  }

  .hero-badge {
    display: inline-block;
    padding: 8px 20px;
    background: rgba(255, 107, 0, 0.1);
    border: 1px solid rgba(255, 107, 0, 0.3);
    border-radius: 50px;
    color: var(--brand);
    font-weight: 700;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 1.5rem;
    animation: fadeInUp 0.8s ease;
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 900;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, var(--text) 0%, var(--text-dim) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: fadeInUp 0.8s ease 0.1s both;
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 2.5vw, 1.375rem);
    color: var(--text-dim);
    font-weight: 500;
    max-width: 800px;
    margin: 0 auto 2rem;
    animation: fadeInUp 0.8s ease 0.2s both;
  }

  .hero-highlight {
    color: var(--brand);
    font-weight: 700;
  }

  /* Section Wave */
  .section-wave {
    position: relative;
    height: 60px;
    overflow: hidden;
    margin-top: -1px;
  }

  .section-wave svg {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 60px;
    fill: var(--bg-secondary);
  }

  /* Categories Section */
  .categories-section {
    padding: 5rem 0;
    background: var(--bg-secondary);
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 800;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--brand), var(--brand-light));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-desc {
    font-size: 1.125rem;
    color: var(--text-dim);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Categories Grid */
  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .category-card {
    background: var(--glass);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: var(--border-radius);
    padding: 2.5rem;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
    animation: fadeInUp 0.8s ease both;
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .category-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at var(--mouse-x, 50%) var(--mouse-y, 50%), 
                rgba(255, 107, 0, 0.1) 0%, 
                transparent 50%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .category-card:hover {
    transform: translateY(-4px);
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 107, 0, 0.3);
    box-shadow: 0 20px 60px rgba(255, 107, 0, 0.15);
  }

  .category-card:hover::before {
    opacity: 1;
  }

  .category-icon {
    width: 60px;
    height: 60px;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, rgba(255, 107, 0, 0.2), rgba(255, 107, 0, 0.1));
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .category-icon svg {
    width: 32px;
    height: 32px;
    fill: var(--brand);
  }

  .category-title {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--text);
    margin-bottom: 1rem;
  }

  .category-desc {
    color: var(--text-dim);
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .category-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--brand);
    text-decoration: none;
    font-weight: 700;
    font-size: 0.95rem;
    transition: var(--transition);
  }

  .category-link svg {
    width: 16px;
    height: 16px;
    stroke: currentColor;
    transition: transform 0.3s ease;
  }

  .category-card:hover .category-link svg {
    transform: translateX(4px);
  }

  /* CTA Banner */
  .cta-banner {
    margin-top: 4rem;
    background: linear-gradient(135deg, rgba(255, 107, 0, 0.1), rgba(255, 107, 0, 0.05));
    border: 1px solid rgba(255, 107, 0, 0.3);
    border-radius: 24px;
    padding: 3rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .cta-banner::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255, 107, 0, 0.1) 0%, transparent 70%);
    animation: rotate 20s linear infinite;
  }

  .cta-content {
    position: relative;
    z-index: 1;
  }

  .cta-title {
    font-size: 2rem;
    font-weight: 900;
    color: var(--text);
    margin-bottom: 1rem;
  }

  .cta-text {
    font-size: 1.125rem;
    color: var(--text-dim);
    margin-bottom: 2rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 28px;
    border-radius: var(--border-radius);
    text-decoration: none;
    font-weight: 700;
    font-size: 1rem;
    transition: var(--transition);
    border: none;
    cursor: pointer;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--brand), var(--brand-light));
    color: #000;
    box-shadow: 0 4px 20px rgba(255, 107, 0, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(255, 107, 0, 0.4);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: var(--text);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
  }

  .btn svg {
    width: 18px;
    height: 18px;
    fill: currentColor;
  }

  /* Royal Assistant Chat Widget */
  .royal-assistant {
    position: fixed;
    bottom: 30px;
    right: 30px;
    z-index: 9999;
  }

  .assistant-button {
    width: 70px;
    height: 70px;
    background: linear-gradient(135deg, var(--brand), var(--brand-light));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: 0 8px 30px rgba(255, 107, 0, 0.4);
    transition: all 0.3s ease;
    border: none;
    position: relative;
    animation: pulse-shadow 2s infinite;
  }

  @keyframes pulse-shadow {
    0%, 100% {
      box-shadow: 0 8px 30px rgba(255, 107, 0, 0.4);
    }
    50% {
      box-shadow: 0 8px 40px rgba(255, 107, 0, 0.6);
    }
  }

  .assistant-button:hover {
    transform: scale(1.1);
    box-shadow: 0 12px 40px rgba(255, 107, 0, 0.5);
  }

  .assistant-icon {
    width: 35px;
    height: 35px;
    fill: #000;
  }

  .assistant-badge {
    position: absolute;
    top: -5px;
    right: -5px;
    width: 20px;
    height: 20px;
    background: #00ff00;
    border-radius: 50%;
    border: 3px solid var(--bg);
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .assistant-tooltip {
    position: absolute;
    bottom: 85px;
    right: 0;
    background: var(--bg-secondary);
    color: var(--text);
    padding: 12px 16px;
    border-radius: var(--border-radius);
    font-size: 14px;
    font-weight: 600;
    white-space: nowrap;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    opacity: 0;
    visibility: hidden;
    transform: translateY(10px);
    transition: all 0.3s ease;
    border: 1px solid var(--glass-border);
  }

  .royal-assistant:hover .assistant-tooltip {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .categories-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .category-card {
      padding: 2rem;
    }

    .cta-banner {
      padding: 2rem;
    }

    .cta-buttons {
      flex-direction: column;
    }

    .btn {
      width: 100%;
      justify-content: center;
    }

    .royal-assistant {
      bottom: 20px;
      right: 20px;
    }

    .assistant-button {
      width: 60px;
      height: 60px;
    }

    .assistant-icon {
      width: 30px;
      height: 30px;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding: 3rem 0 2rem;
    }

    .categories-section {
      padding: 3rem 0;
    }
  }
</style>

<script>
  // Mouse follow effect for cards
  document.querySelectorAll('.category-card').forEach(card => {
    card.addEventListener('mousemove', (e) => {
      const rect = card.getBoundingClientRect();
      const x = ((e.clientX - rect.left) / rect.width) * 100;
      const y = ((e.clientY - rect.top) / rect.height) * 100;
      
      card.style.setProperty('--mouse-x', `${x}%`);
      card.style.setProperty('--mouse-y', `${y}%`);
    });
  });

  // Royal Assistant Chat functionality
  const assistantButton = document.querySelector('.assistant-button');
  
  assistantButton?.addEventListener('click', () => {
    // Tu bude neskôr prepojenie na chat aplikáciu
    console.log('Royal Asistent - pripravuje sa...');
    alert('Royal Asistent bude čoskoro k dispozícii! Zatiaľ nás kontaktujte na 0948 555 551');
  });
</script>