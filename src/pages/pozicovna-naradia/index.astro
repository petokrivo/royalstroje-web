---
// src/pages/pozicovna-naradia/index.astro
import Layout from "../../layouts/Layout.astro";

const categories = [
  {
    title: "Malé náradie",
    url: "/pozicovna-naradia/male-naradie",
    image: "/images/categories/male-naradie.webp", // Sem vložte fotku
    description: "Ručné náradie, malá stavebná mechanizácia, vykurovacie zariadenia, čerpadlá, meracia technika, záhradná technika."
  },
  {
    title: "Stredná mechanizácia",
    url: "/pozicovna-naradia/stredna-mechanizacia",
    image: "/images/categories/stredna-mechanizacia.webp", // Sem vložte fotku
    description: "Vibračné nohy a dosky, cestné píly, elektrocentrály, kompresory, miešačky a ďalšie."
  },
  {
    title: "Ťažká technika",
    url: "/pozicovna-naradia/tazka-technika",
    image: "/images/categories/tazka-technika.webp", // Sem vložte fotku
    description: "Pásové mini a midi rýpadlá, veľké pásové a kolesové rýpadlá, nakladače, dumpre, valce."
  },
  {
    title: "Pracovné plošiny",
    url: "/pozicovna-naradia/pracovne-plosiny",
    image: "/images/categories/pracovne-plosiny.webp", // Sem vložte fotku
    description: "Pracovné plošiny - interiérové aj exteriérové."
  },
  {
    title: "Vybavenie staveniska",
    url: "/pozicovna-naradia/vybavenie-staveniska",
    image: "/images/categories/vybavenie-staveniska.webp", // Sem vložte fotku
    description: "Kontajnery (kancelárske, skladové, sanitárne), vrátnice, mobilné oplotenie a zábrany, mobilné toalety."
  },
  {
    title: "Autá a prívesné vozíky",
    url: "/pozicovna-naradia/auta-privesy",
    image: "/images/categories/auta-privesy.webp", // Sem vložte fotku
    description: "Autá, dodávky a prívesné vozíky na prevoz techniky a materiálu."
  }
];
---

<Layout 
  title="Požičovňa náradia - ROYAL STROJE" 
  description="Profesionálny prenájom stavebnej techniky a náradia. Malé náradie, ťažká technika, manipulačná technika. Senec a celé Slovensko."
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <div class="hero-badge">Profesionálne náradie</div>
        <h1 class="hero-title">
          Požičovňa náradia pre domácich majstrov, živnostníkov a stavebné firmy
        </h1>
        <p class="hero-subtitle">
          Široký výber <span class="hero-highlight">profesionálneho náradia</span> a stavebnej techniky 
          za výhodné ceny. Od ručného náradia až po ťažkú techniku.
        </p>
      </div>
    </div>
  </section>

  <!-- Wave Transition -->
  <div class="section-wave">
    <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M321.39,56.44C187.11,91.18,121.55,126.46,0,134.64V0H1200V0C1073.5,18.55,944.72,59.95,806.04,69.46C729.84,74.58,461.25,37.34,321.39,56.44Z"/>
    </svg>
  </div>

  <!-- Categories Section -->
  <section class="categories-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Naše kategórie</h2>
        <p class="section-desc">Vyberte si z našej širokej ponuky profesionálneho náradia a techniky</p>
      </div>

      <div class="categories-grid">
        {categories.map((category, index) => (
          <a href={category.url} class="category-card" style={`animation-delay: ${index * 0.1}s`}>
            <div class="category-image">
              <img src={category.image} alt={category.title} loading="lazy" />
              <div class="image-overlay"></div>
            </div>
            <div class="category-content">
              <h3 class="category-title">{category.title}</h3>
              <p class="category-desc">{category.description}</p>
              <span class="category-link">
                Zobraziť ponuku
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14m-7-7l7 7-7 7"/>
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>

      <!-- CTA Banner -->
      <div class="cta-banner">
        <div class="cta-content">
          <h3 class="cta-title">Potrebujete poradiť s výberom?</h3>
          <p class="cta-text">
            Náš tím odborníkov vám pomôže vybrať správne náradie pre váš projekt.
            Sme tu pre vás 24/7.
          </p>
          <div class="cta-buttons">
            <a href="tel:+421948555551" class="btn btn-primary">
              <svg viewBox="0 0 24 24">
                <path d="M6.62 10.79a15.05 15.05 0 006.59 6.59l2.2-2.2a1 1 0 011.01-.24c1.11.37 2.31.57 3.58.57a1 1 0 011 1v3.5a1 1 0 01-1 1C12.4 21.82 2.18 11.6 2.18 3a1 1 0 011-1H6.7a1 1 0 011 1c0 1.27.2 2.47.57 3.58a1 1 0 01-.24 1.01l-2.2 2.2z"/>
              </svg>
              0948 555 551
            </a>
            <a href="/kontakt" class="btn btn-secondary">
              Kontaktný formulár
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    padding: 5rem 0 3rem;
    background: linear-gradient(135deg, rgba(255, 107, 0, 0.03) 0%, transparent 50%);
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: radial-gradient(circle at 1px 1px, rgba(255, 107, 0, 0.15) 1px, transparent 1px);
    background-size: 40px 40px;
    opacity: 0.3;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
  }

  .hero-badge {
    display: inline-block;
    padding: 8px 20px;
    background: rgba(255, 107, 0, 0.1);
    border: 1px solid rgba(255, 107, 0, 0.3);
    border-radius: 50px;
    color: var(--brand);
    font-weight: 700;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 1.5rem;
    animation: fadeInUp 0.8s ease;
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 900;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, var(--text) 0%, var(--text-dim) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: fadeInUp 0.8s ease 0.1s both;
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 2.5vw, 1.375rem);
    color: var(--text-dim);
    font-weight: 500;
    max-width: 800px;
    margin: 0 auto 2rem;
    animation: fadeInUp 0.8s ease 0.2s both;
  }

  .hero-highlight {
    color: var(--brand);
    font-weight: 700;
  }

  /* Section Wave */
  .section-wave {
    position: relative;
    height: 60px;
    overflow: hidden;
    margin-top: -1px;
  }

  .section-wave svg {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 60px;
    fill: var(--bg-secondary);
  }

  /* Categories Section */
  .categories-section {
    padding: 5rem 0;
    background: var(--bg-secondary);
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 800;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--brand), var(--brand-light));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-desc {
    font-size: 1.125rem;
    color: var(--text-dim);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Categories Grid */
  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .category-card {
    background: var(--glass);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    position: relative;
    animation: fadeInUp 0.8s ease both;
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
  }

  .category-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 60px rgba(255, 107, 0, 0.2);
    border-color: rgba(255, 107, 0, 0.3);
  }

  /* Category Image */
  .category-image {
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;
    background: linear-gradient(135deg, rgba(255, 107, 0, 0.1), rgba(255, 107, 0, 0.05));
    border-bottom: 1px solid rgba(255, 107, 0, 0.2);
  }

  .category-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .category-card:hover .category-image img {
    transform: scale(1.1);
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      rgba(0, 0, 0, 0.3) 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .category-card:hover .image-overlay {
    opacity: 1;
  }

  /* Category Content */
  .category-content {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .category-title {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--text);
    margin-bottom: 1rem;
  }

  .category-desc {
    color: var(--text-dim);
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .category-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--brand);
    font-weight: 700;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    margin-top: auto;
  }

  .category-link svg {
    width: 16px;
    height: 16px;
    stroke: currentColor;
    transition: transform 0.3s ease;
  }

  .category-card:hover .category-link svg {
    transform: translateX(4px);
  }

  /* CTA Banner */
  .cta-banner {
    margin-top: 4rem;
    background: linear-gradient(135deg, rgba(255, 107, 0, 0.1), rgba(255, 107, 0, 0.05));
    border: 1px solid rgba(255, 107, 0, 0.3);
    border-radius: 24px;
    padding: 3rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .cta-banner::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255, 107, 0, 0.1) 0%, transparent 70%);
    animation: rotate 20s linear infinite;
  }

  .cta-content {
    position: relative;
    z-index: 1;
  }

  .cta-title {
    font-size: 2rem;
    font-weight: 900;
    color: var(--text);
    margin-bottom: 1rem;
  }

  .cta-text {
    font-size: 1.125rem;
    color: var(--text-dim);
    margin-bottom: 2rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 28px;
    border-radius: var(--border-radius);
    text-decoration: none;
    font-weight: 700;
    font-size: 1rem;
    transition: var(--transition);
    border: none;
    cursor: pointer;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--brand), var(--brand-light));
    color: #000;
    box-shadow: 0 4px 20px rgba(255, 107, 0, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(255, 107, 0, 0.4);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: var(--text);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
  }

  .btn svg {
    width: 18px;
    height: 18px;
    fill: currentColor;
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .categories-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .category-content {
      padding: 1.5rem;
    }

    .cta-banner {
      padding: 2rem;
    }

    .cta-buttons {
      flex-direction: column;
    }

    .btn {
      width: 100%;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding: 3rem 0 2rem;
    }

    .categories-section {
      padding: 3rem 0;
    }

    .category-image {
      height: 150px;
    }
  }
</style>

<script>
  // Intersection Observer for animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.animationPlayState = 'running';
      }
    });
  }, observerOptions);

  document.querySelectorAll('.category-card').forEach(card => {
    card.style.animationPlayState = 'paused';
    observer.observe(card);
  });
</script>

