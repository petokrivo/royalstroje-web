---
// src/pages/pozicovna-naradia/stredna-mechanizacia/index.astro
import Layout from '../../../layouts/Layout.astro';

const pageTitle = "Stredná mechanizácia - ROYAL STROJE";
const pageDescription = "Profesionálna stredná mechanizácia na prenájom v Seneci. Vibračné dosky, elektrocentrály, kompresory, cestné rezačky a viac.";

// Kategórie strednej mechanizácie
const mechanizacia = [
  {
    title: "Vibračné dosky a nohy",
    description: "Výkonné vibračné zariadenia pre zhutňovanie podkladu a asfaltových povrchov",
    image: "/images/stredna-mechanizacia/vibracne-dosky.webp",
    alt: "Vibračné dosky a nohy",
    url: "/pozicovna-naradia/stredna-mechanizacia/vibracne-dosky-a-nohy"
  },
  {
    title: "Elektrocentrály",
    description: "Spoľahlivé generátory elektrickej energie pre stavebné práce a záložné napájanie",
    image: "/images/stredna-mechanizacia/elektrocentraly.webp",
    alt: "Elektrocentrály a generátory",
    url: "/pozicovna-naradia/stredna-mechanizacia/elektrocentraly"
  },
  {
    title: "Kompresory",
    description: "Tlakové vzduchové kompresory pre pneumatické náradie a striekanie",
    image: "/images/stredna-mechanizacia/kompresory.webp",
    alt: "Vzduchové kompresory",
    url: "/pozicovna-naradia/stredna-mechanizacia/kompresory"
  },
  {
    title: "Cestné rezačky, frézy a brúsky",
    description: "Profesionálne zariadenia pre rezanie a opravy asfaltových a betónových povrchov",
    image: "/images/stredna-mechanizacia/cestne-rezacky.webp",
    alt: "Cestné rezačky a frézy",
    url: "/pozicovna-naradia/stredna-mechanizacia/cestne-rezacky-frezy-a-brusky"
  },
  {
    title: "Stolové a portálové píly",
    description: "Presné rezacie stolové píly pre kameň, betón, dlažbu a stavebné materiály",
    image: "/images/stredna-mechanizacia/stolove-pily.webp",
    alt: "Stolové a portálové píly",
    url: "/pozicovna-naradia/stredna-mechanizacia/stolove-a-portalove-pily"
  },
  {
    title: "Miešačky, hladičky betónu a bádie",
    description: "Betonárske zariadenia pre miešanie, hladenie a transport betónových zmesí",
    image: "/images/stredna-mechanizacia/miesacky-betonarske.webp",
    alt: "Miešačky a hladičky betónu",
    url: "/pozicovna-naradia/stredna-mechanizacia/miesacky-hladiciky-betonu-a-badie"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <section class="stredna-mechanizacia-section">
    <div class="container">
      <!-- Breadcrumbs -->
      <nav class="breadcrumbs" aria-label="Breadcrumb">
        <ol>
          <li><a href="/">Domov</a></li>
          <li><a href="/pozicovna-naradia">Požičovňa náradia</a></li>
          <li aria-current="page">Stredná mechanizácia</li>
        </ol>
      </nav>

      <!-- Header -->
      <div class="section-header">
        <div class="section-badge">Stredná mechanizácia</div>
        <h1 class="section-title">Výkonné stroje pre stredné stavebné práce</h1>
        <p class="section-subtitle">
          Profesionálna mechanizácia pre efektívne riešenie stredných stavebných projektov a infraštruktúrnych prác
        </p>
      </div>

      <!-- Grid mechanizácie -->
      <div class="mechanizacia-grid">
        {mechanizacia.map((item) => (
          <div class="mechanizacia-card">
            <div class="mechanizacia-image">
              <img src={item.image} alt={item.alt} loading="lazy" />
            </div>
            <div class="mechanizacia-content">
              <h3 class="mechanizacia-title">{item.title}</h3>
              <p class="mechanizacia-description">{item.description}</p>
              <a href={item.url} class="mechanizacia-link">
                Zobraziť ponuku
                <svg viewBox="0 0 24 24">
                  <path d="M8.59 16.59L13.17 12L8.59 7.41L10 6L16 12L10 18L8.59 16.59Z"/>
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>

      <!-- CTA sekcia -->
      <div class="cta-section">
        <div class="cta-content">
          <h2>Potrebujete poradiť s výberom mechanizácie?</h2>
          <p>Naši techniční špecialisti vám pomôžu vybrať správne stroje pre váš projekt</p>
          <div class="cta-actions">
            <a href="tel:+421948555551" class="cta-phone">
              <svg viewBox="0 0 24 24">
                <path d="M6.62 10.79a15.05 15.05 0 006.59 6.59l2.2-2.2a1 1 0 011.01-.24c1.11.37 2.31.57 3.58.57a1 1 0 011 1v3.5a1 1 0 01-1 1C12.4 21.82 2.18 11.6 2.18 3a1 1 0 011-1H6.7a1 1 0 011 1c0 1.27.2 2.47.57 3.58a1 1 0 01-.24 1.01l-2.2 2.2z"/>
              </svg>
              Zavolajte 0948 555 551
            </a>
            <a href="/kontakt" class="cta-contact">Kontaktný formulár</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* STREDNÁ MECHANIZÁCIA SECTION */
  .stredna-mechanizacia-section {
    padding: 40px 0 120px;
    background: linear-gradient(135deg, #0a0a0a 0%, #111111 50%, #0a0a0a 100%);
    position: relative;
    overflow: hidden;
    min-height: calc(100vh - 80px);
  }

  .stredna-mechanizacia-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 20%, rgba(255, 107, 0, 0.05) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(255, 107, 0, 0.03) 0%, transparent 50%);
    pointer-events: none;
  }

  .stredna-mechanizacia-section::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: radial-gradient(circle at 2px 2px, rgba(255, 107, 0, 0.1) 1px, transparent 0);
    background-size: 40px 40px;
    opacity: 0.2;
    pointer-events: none;
  }

  /* BREADCRUMBS */
  .breadcrumbs {
    margin-bottom: 40px;
  }

  .breadcrumbs ol {
    display: flex;
    align-items: center;
    gap: 8px;
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: 14px;
  }

  .breadcrumbs li {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .breadcrumbs li:not(:last-child)::after {
    content: '>';
    color: var(--text-dim);
    font-weight: 600;
  }

  .breadcrumbs a {
    color: var(--brand);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .breadcrumbs a:hover {
    color: var(--brand-light);
  }

  .breadcrumbs li[aria-current="page"] {
    color: var(--text-dim);
    font-weight: 600;
  }

  /* SECTION HEADER */
  .section-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .section-badge {
    display: inline-block;
    background: linear-gradient(135deg, rgba(255, 107, 0, 0.2), rgba(255, 107, 0, 0.1));
    border: 1px solid rgba(255, 107, 0, 0.3);
    color: var(--brand);
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    padding: 8px 20px;
    border-radius: 50px;
    margin-bottom: 24px;
  }

  .section-title {
    font-size: 3.5rem;
    font-weight: 900;
    background: linear-gradient(135deg, var(--text) 0%, var(--text-dim) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 24px;
    line-height: 1.1;
  }

  .section-subtitle {
    font-size: 1.25rem;
    color: var(--text-dim);
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* MECHANIZÁCIA GRID */
  .mechanizacia-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
    gap: 32px;
    margin-bottom: 80px;
  }

  .mechanizacia-card {
    background: rgba(17, 17, 17, 0.8);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .mechanizacia-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 107, 0, 0.05) 0%, transparent 50%);
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .mechanizacia-card:hover::before {
    opacity: 1;
  }

  .mechanizacia-card:hover {
    transform: translateY(-8px);
    border-color: rgba(255, 107, 0, 0.4);
    box-shadow: 0 20px 60px rgba(255, 107, 0, 0.15);
  }

  /* MECHANIZÁCIA OBRÁZOK */
  .mechanizacia-image {
    height: 220px;
    background: #ffffff;
    overflow: hidden;
    position: relative;
  }

  .mechanizacia-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 0.3s ease;
  }

  .mechanizacia-card:hover .mechanizacia-image img {
    transform: scale(1.05);
  }

  /* MECHANIZÁCIA OBSAH */
  .mechanizacia-content {
    padding: 32px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .mechanizacia-title {
    font-size: 1.3rem;
    font-weight: 800;
    color: var(--text);
    margin-bottom: 12px;
    line-height: 1.3;
  }

  .mechanizacia-description {
    font-size: 0.95rem;
    color: var(--text-dim);
    margin-bottom: 24px;
    line-height: 1.5;
    flex-grow: 1;
  }

  .mechanizacia-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: linear-gradient(135deg, var(--brand), var(--brand-light));
    color: #000;
    text-decoration: none;
    font-weight: 700;
    font-size: 14px;
    padding: 12px 24px;
    border-radius: 50px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .mechanizacia-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(255, 107, 0, 0.4);
  }

  .mechanizacia-link svg {
    width: 16px;
    height: 16px;
    fill: currentColor;
    transition: transform 0.3s ease;
  }

  .mechanizacia-link:hover svg {
    transform: translateX(2px);
  }

  /* CTA SECTION */
  .cta-section {
    background: linear-gradient(135deg, rgba(255, 107, 0, 0.1), rgba(255, 107, 0, 0.05));
    border: 1px solid rgba(255, 107, 0, 0.3);
    border-radius: 24px;
    padding: 60px 40px;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .cta-section::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 50% 50%, rgba(255, 107, 0, 0.05) 0%, transparent 70%);
    pointer-events: none;
  }

  .cta-content h2 {
    font-size: 2rem;
    font-weight: 800;
    color: var(--text);
    margin-bottom: 16px;
  }

  .cta-content p {
    font-size: 1.1rem;
    color: var(--text-dim);
    margin-bottom: 32px;
    max-width: 520px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-actions {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
  }

  .cta-phone {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background: linear-gradient(135deg, var(--brand), var(--brand-light));
    color: #000;
    text-decoration: none;
    font-weight: 800;
    font-size: 16px;
    padding: 16px 32px;
    border-radius: 50px;
    transition: all 0.3s ease;
  }

  .cta-phone:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 35px rgba(255, 107, 0, 0.4);
  }

  .cta-phone svg {
    width: 20px;
    height: 20px;
    fill: currentColor;
  }

  .cta-contact {
    display: inline-flex;
    align-items: center;
    background: transparent;
    border: 2px solid var(--brand);
    color: var(--brand);
    text-decoration: none;
    font-weight: 700;
    font-size: 16px;
    padding: 14px 30px;
    border-radius: 50px;
    transition: all 0.3s ease;
  }

  .cta-contact:hover {
    background: var(--brand);
    color: #000;
    transform: translateY(-2px);
  }

  /* RESPONSIVE */
  @media (max-width: 768px) {
    .stredna-mechanizacia-section {
      padding: 20px 0 80px;
    }

    .section-header {
      margin-bottom: 60px;
    }

    .section-title {
      font-size: 2.5rem;
    }

    .mechanizacia-grid {
      grid-template-columns: 1fr;
      gap: 24px;
      margin-bottom: 60px;
    }

    .mechanizacia-card {
      max-width: 100%;
    }

    .cta-section {
      padding: 40px 24px;
    }

    .cta-content h2 {
      font-size: 1.5rem;
    }

    .cta-actions {
      flex-direction: column;
    }
  }

  @media (max-width: 480px) {
    .section-title {
      font-size: 2rem;
    }

    .mechanizacia-image {
      height: 180px;
    }

    .mechanizacia-content {
      padding: 24px;
    }

    .breadcrumbs {
      margin-bottom: 20px;
    }
  }

  /* FOCUS STATES */
  .mechanizacia-card:focus-within {
    outline: 2px solid var(--brand);
    outline-offset: 4px;
  }

  .mechanizacia-link:focus,
  .cta-phone:focus,
  .cta-contact:focus {
    outline: 2px solid var(--brand);
    outline-offset: 2px;
  }

  /* ACCESSIBILITY */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>