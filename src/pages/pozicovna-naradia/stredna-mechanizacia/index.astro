---
import Layout from '../../../layouts/Layout.astro';

const pageTitle = "Stredná mechanizácia - ROYAL STROJE";
const pageDescription = "Profesionálna stredná mechanizácia na prenájom v Seneci. Vibračné dosky, elektrocentrály, kompresory, cestné rezačky a viac.";

// Kategórie strednej mechanizácie (obsah zachovaný)
const mechanizacia = [
  {
    title: "Vibračné dosky a nohy",
    description: "Výkonné vibračné zariadenia pre zhutňovanie podkladu a asfaltových povrchov",
    image: "/images/stredna-mechanizacia/vibracne-dosky.webp",
    alt: "Vibračné dosky a nohy",
    url: "/pozicovna-naradia/stredna-mechanizacia/vibracne-dosky-a-nohy"
  },
  {
    title: "Elektrocentrály",
    description: "Spoľahlivé generátory elektrickej energie pre stavebné práce a záložné napájanie",
    image: "/images/stredna-mechanizacia/elektrocentraly.webp",
    alt: "Elektrocentrály a generátory",
    url: "/pozicovna-naradia/stredna-mechanizacia/elektrocentraly"
  },
  {
    title: "Kompresory",
    description: "Tlakové vzduchové kompresory pre pneumatické náradie a striekanie",
    image: "/images/stredna-mechanizacia/kompresory.webp",
    alt: "Vzduchové kompresory",
    url: "/pozicovna-naradia/stredna-mechanizacia/kompresory"
  },
  {
    title: "Cestné rezačky, frézy a brúsky",
    description: "Profesionálne zariadenia pre rezanie a opravy asfaltových a betónových povrchov",
    image: "/images/stredna-mechanizacia/cestne-rezacky.webp",
    alt: "Cestné rezačky a frézy",
    url: "/pozicovna-naradia/stredna-mechanizacia/cestne-rezacky-frezy-a-brusky"
  },
  {
    title: "Stolové a portálové píly",
    description: "Presné rezacie stolové píly pre kameň, betón, dlažbu a stavebné materiály",
    image: "/images/stredna-mechanizacia/stolove-pily.webp",
    alt: "Stolové a portálové píly",
    url: "/pozicovna-naradia/stredna-mechanizacia/stolove-a-portalove-pily"
  },
  {
    title: "Miešačky, hladičky betónu a bádie",
    description: "Betonárske zariadenia pre miešanie, hladenie a transport betónových zmesí",
    image: "/images/stredna-mechanizacia/miesacky-betonarske.webp",
    alt: "Miešačky a hladičky betónu",
    url: "/pozicovna-naradia/stredna-mechanizacia/miesacky-hladiciky-betonu-a-badie"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>

  <!-- GLOBAL BACKDROP – pekné pozadie ako na domovskej, vždy pod obsahom -->
  <div aria-hidden="true" class="pointer-events-none fixed inset-0 -z-10">
    <img 
      src="/images/hero/pozicovna-hero.webp"
      alt=""
      class="w-full h-full object-cover brightness-[0.95]"
      width="1920" height="1080" loading="eager"
    />
    <div class="absolute inset-0 bg-black/55"></div>
    <div class="absolute inset-0 bg-[#FF6600]/8 mix-blend-overlay"></div>
  </div>

  <!-- HERO HLAVIČKA (štýl ako index) -->
  <section class="relative min-h-[38vh] md:min-h-[42vh] flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute inset-0 bg-gradient-to-b from-black/30 via-black/20 to-black/40"></div>
    </div>

    <div class="relative z-10 w-full px-4 md:px-8 lg:px-12 xl:px-16 2xl:px-24 py-10 text-center">
      <div class="max-w-5xl mx-auto">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-[#FF6600] rounded-full mb-4 shadow-lg">
          <div class="w-2 h-2 bg-white rounded-full animate-pulse"></div>
          <span class="text-white text-xs md:text-sm font-bold uppercase tracking-wide">Požičovňa • Stredná mechanizácia</span>
        </div>

        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-black text-white mb-4 leading-tight drop-shadow-[0_3px_10px_rgba(0,0,0,0.9)]">
          Výkonné <span class="text-[#FF6600]">stroje</span> pre vaše projekty
        </h1>

        <p class="text-white text-base md:text-lg lg:text-xl mb-6 font-medium max-w-3xl mx-auto drop-shadow-[0_2px_8px_rgba(0,0,0,0.9)]">
          Profesionálna mechanizácia pre efektívne riešenie stredných stavebných a infraštruktúrnych prác.
        </p>

        <!-- Breadcrumbs -->
        <nav class="inline-flex items-center gap-2 px-4 py-2 bg-black/35 backdrop-blur-sm border border-white/10 rounded-full text-white/90 text-xs md:text-sm" aria-label="Breadcrumb">
          <a href="/" class="hover:text-white transition">Domov</a>
          <span class="opacity-60">/</span>
          <a href="/pozicovna-naradia" class="hover:text-white transition">Požičovňa náradia</a>
          <span class="opacity-60">/</span>
          <span class="text-white">Stredná mechanizácia</span>
        </nav>
      </div>
    </div>
  </section>

  <div class="h-1 bg-gradient-to-r from-transparent via-[#FF6600] to-transparent"></div>

  <!-- GRID KATEGÓRIÍ – karty 1:1 v štýle domovskej -->
  <section class="py-16 md:py-20 relative">
    <!-- sekčný overlay len pre čitateľnosť -->
    <div class="absolute inset-0 bg-black/55 backdrop-blur-[2px]"></div>

    <div class="max-w-[1800px] mx-auto px-4 md:px-8 lg:px-12 xl:px-16 2xl:px-24 relative z-10">
      <div class="text-center mb-10 fade-in-section">
        <span class="inline-block px-5 py-2 bg-[#FF6600] border-2 border-[#FF6600] rounded-full text-white text-sm font-bold uppercase tracking-wider mb-5 shadow-2xl shadow-[#FF6600]/50">
          Stredná mechanizácia
        </span>
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-black text-white mb-5 leading-tight drop-shadow-[0_4px_12px_rgba(0,0,0,0.9)]">
          Vyberte si <span class="text-[#FF6600]">kategóriu</span>
        </h2>
        <p class="text-white text-lg md:text-xl max-w-3xl mx-auto drop-shadow-[0_2px_8px_rgba(0,0,0,0.8)]">
          Vibračné dosky, elektrocentrály, kompresory, cestné rezačky, píly, miešačky a hladičky.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {mechanizacia.map((item, index) => (
          <a 
            href={item.url}
            class="service-card group relative overflow-hidden rounded-2xl bg-black/90 backdrop-blur-xl border-2 border-white/20 hover:border-[#FF6600] transition-all duration-500 shadow-2xl hover:shadow-[0_20px_60px_rgba(255,102,0,0.4)] hover:-translate-y-2"
            style={`animation-delay: ${index * 0.08}s`}
            aria-label={item.title}
          >
            <!-- Obrázok -->
            <div class="relative h-56 overflow-hidden">
              <img 
                src={item.image} 
                alt={item.alt}
                class="w-full h-full object-cover group-hover:scale-110 transition-all duration-700 ease-out brightness-110 group-hover:brightness-125"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black via-black/70 to-transparent"></div>

              <!-- Badge -->
              <div class="absolute top-4 right-4 px-3 py-1.5 bg-[#FF6600] text-white text-xs font-black rounded-lg uppercase tracking-widest shadow-2xl border border-white/30 backdrop-blur-sm">
                Premium
              </div>
            </div>

            <!-- Deliaca línia -->
            <div class="h-px bg-gradient-to-r from-transparent via-white/30 to-transparent"></div>

            <!-- Obsah -->
            <div class="p-6 flex flex-col bg-gradient-to-b from-black/95 to-black relative z-10">
              <h3 class="text-xl lg:text-2xl font-black text-white mb-3 group-hover:text-[#FF6600] transition-colors duration-500 leading-tight">
                {item.title}
              </h3>
              <p class="text-white/90 text-sm lg:text-base leading-relaxed mb-5 font-normal">
                {item.description}
              </p>

              <div class="mt-auto pt-5 border-t border-white/10 flex items-center justify-between">
                <span class="text-[#FF6600] font-bold text-sm group-hover:text-white transition-colors duration-300">
                  Zobraziť ponuku
                </span>
                <div class="flex items-center justify-center w-10 h-10 bg-[#FF6600] rounded-full group-hover:bg-white transition-all duration-300 shadow-lg border border-white/20">
                  <svg class="w-4 h-4 text-white group-hover:text-[#FF6600] group-hover:translate-x-1 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
                  </svg>
                </div>
              </div>
            </div>

            <!-- Jemný spodný glow -->
            <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-[#FF6600]/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <div class="h-1 bg-gradient-to-r from-transparent via-[#FF6600] to-transparent"></div>

  <!-- CTA PANEL (štýl indexu) -->
  <section class="py-12 md:py-14">
    <div class="max-w-4xl mx-auto px-4 md:px-8 text-center">
      <div class="scale-in bg-black/90 backdrop-blur-xl border-2 border-white/20 rounded-3xl p-10 lg:p-12 shadow-2xl hover:border-[#FF6600]/50 transition-all duration-500">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-black text-white mb-4 drop-shadow-[0_4px_12px_rgba(0,0,0,0.9)]">
          Potrebujete poradiť s <span class="text-[#FF6600]">výberom</span> mechanizácie?
        </h2>
        <p class="text-white text-lg mb-3 font-semibold drop-shadow-[0_2px_8px_rgba(0,0,0,0.8)]">
          Naši technickí špecialisti vám pomôžu vybrať správne stroje pre váš projekt.
        </p>
        <p class="text-white/80 text-base mb-8 font-medium">Zavolajte alebo napíšte. Sme tu pre vás.</p>
        
        <div class="flex flex-wrap justify-center gap-4">
          <a 
            href="tel:+421948555551"
            class="inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-[#FF6600] to-[#ff8533] text-white font-bold text-lg rounded-full hover:scale-110 transition-all duration-300 shadow-2xl shadow-[#FF6600]/60 border-2 border-black"
          >
            <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M6.62 10.79a15.05 15.05 0 006.59 6.59l2.2-2.2a1 1 0 011.01-.24c1.11.37 2.31.57 3.58.57a1 1 0 011 1v3.5a1 1 0 01-1 1C12.4 21.82 2.18 11.6 2.18 3a1 1 0 011-1H6.7a1 1 0 011 1c0 1.27.2 2.47.57 3.58a1 1 0 01-.24 1.01l-2.2 2.2z"/>
            </svg>
            0948 555 551
          </a>

          <a 
            href="/kontakt"
            class="inline-flex items-center gap-3 px-8 py-4 bg-zinc-800 border-2 border-zinc-700 text-white font-bold text-lg rounded-full hover:bg-zinc-700 hover:scale-110 transition-all duration-300"
          >
            Kontaktný formulár
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Neškodný prechod pred footerom (footer bude viditeľný) -->
  <div class="h-12 pointer-events-none">
    <div class="h-full bg-gradient-to-b from-transparent via-white/10 to-transparent opacity-20"></div>
  </div>

</Layout>

<style>
  /* Animácie a zjednotenie so štýlom domovskej */
  .service-card { opacity: 0; transform: translateY(40px); transition: opacity .8s ease-out, transform .8s ease-out; }
  .service-card.in-view { opacity: 1; transform: none; }

  .fade-in-section { opacity: 0; transform: translateY(30px); transition: opacity .6s ease-out, transform .6s ease-out; }
  .fade-in-section.in-view { opacity: 1; transform: none; }

  .scale-in { opacity: 0; transform: scale(.95); transition: opacity .6s ease-out, transform .6s ease-out; }
  .scale-in.in-view { opacity: 1; transform: scale(1); }

  @media (prefers-reduced-motion: reduce) {
    .service-card, .fade-in-section, .scale-in { transition: none; opacity: 1; transform: none; }
  }

  /* Poistka pre footer nad globálnym pozadím (ak by Safari blbol) */
  footer, .site-footer { position: relative; z-index: 20; }
</style>

<script>
  // Intersection Observer pre jemné nábehy (rovnako ako na domovskej)
  document.addEventListener('DOMContentLoaded', () => {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => { if (entry.isIntersecting) entry.target.classList.add('in-view'); });
    }, { threshold: 0.1, rootMargin: '0px 0px -80px 0px' });

    document.querySelectorAll('.service-card, .fade-in-section, .scale-in').forEach(el => observer.observe(el));
  });
</script>
