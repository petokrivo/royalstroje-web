---
// src/pages/pozicovna-naradia/male-naradie/index.astro
import Layout from '../../../layouts/Layout.astro';

const pageTitle = "Malé náradie - ROYAL STROJE";
const pageDescription = "Profesionálne malé stavebné náradie na prenájom v Seneci. Vŕtačky, brúsky, píly, vysávače, čerpadlá, zváracia technika a viac.";

// Kategórie malého náradia
const naradia = [
  {
    title: "Vŕtacie búracie kladivá a vŕtačky",
    description: "Výkonné vŕtačky a búracie kladivá pre betón, murivko a ďalšie materiály",
    image: "/images/male-naradie/vrtacky.webp",
    alt: "Vŕtacie a búracie kladivá",
    url: "/pozicovna-naradia/male-naradie/vrtacie-buracie-kladiva-a-vrtacky"
  },
  {
    title: "Uhlové, vibračné a pásové brúsky",
    description: "Profesionálne brúsky pre rezanie, brúsenie a úpravu kovov a betónu",
    image: "/images/male-naradie/brusky.webp",
    alt: "Uhlové a vibračné brúsky",
    url: "/pozicovna-naradia/male-naradie/uhlove-vibracne-a-pasove-brusky"
  },
  {
    title: "Ručné píly a rezačky",
    description: "Presné rezacie nástroje pre drevo, kov, plast a ďalšie materiály",
    image: "/images/male-naradie/pily.webp",
    alt: "Ručné píly a rezačky",
    url: "/pozicovna-naradia/male-naradie/rucne-pily-a-rezacky"
  },
  {
    title: "Vysávače, tepovače a tlakové čističe",
    description: "Čistiace zariadenia pre stavebné práce a úklid pracoviska",
    image: "/images/male-naradie/vysavace.webp",
    alt: "Vysávače a čističe",
    url: "/pozicovna-naradia/male-naradie/vysavace-tepovace-a-tlakove-cistice"
  },
  {
    title: "Čerpadlá, ohrievače a odvlhčovače",
    description: "Technika pre vodné hospodárstvo a klimatizáciu priestorov",
    image: "/images/male-naradie/cerpadla.webp",
    alt: "Čerpadlá a ohrievače",
    url: "/pozicovna-naradia/male-naradie/cerpadla-ohrieavce-a-odvlhcovace"
  },
  {
    title: "Zváracia a meracia technika",
    description: "Presné meracie prístroje a profesionálne zváracie zariadenia",
    image: "/images/male-naradie/zvaranie.webp",
    alt: "Zváracia a meracia technika",
    url: "/pozicovna-naradia/male-naradie/zvaracia-a-meracia-technika"
  },
  {
    title: "Vibrátory, vibračné lišty a miešadlá",
    description: "Betonárske náradie pre zhutňovanie a miešanie stavebných zmesí",
    image: "/images/male-naradie/vibratory.webp",
    alt: "Vibrátory a miešadlá",
    url: "/pozicovna-naradia/male-naradie/vibratory-vibracne-listy-a-miesadla"
  },
  {
    title: "Lešenie",
    description: "Bezpečné lešenárske systémy pre prácu vo výške a na fasádach",
    image: "/images/male-naradie/lesenie.webp",
    alt: "Lešenie a lešenárske kozy",
    url: "/pozicovna-naradia/male-naradie/lesenie"
  },
  {
    title: "Záhradná technika",
    description: "Kosačky, vysekávače, reťazové píly a ďalšia záhradná technika",
    image: "/images/male-naradie/zahrada.webp",
    alt: "Záhradná technika",
    url: "/pozicovna-naradia/male-naradie/zahradna-technika"
  },
  {
    title: "Nádrže na vodu a naftu",
    description: "Skladovacie nádrže a kontajnery pre rôzne typy tekutín",
    image: "/images/male-naradie/nadrze.webp",
    alt: "Nádrže na vodu a naftu",
    url: "/pozicovna-naradia/male-naradie/nadrze-na-vodu-a-naftu"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <section class="male-naradie-section">
    <div class="container">
      <!-- Breadcrumbs -->
      <nav class="breadcrumbs" aria-label="Breadcrumb">
        <ol>
          <li><a href="/">Domov</a></li>
          <li><a href="/pozicovna-naradia">Požičovňa náradia</a></li>
          <li aria-current="page">Malé náradie</li>
        </ol>
      </nav>

      <!-- Header -->
      <div class="section-header">
        <div class="section-badge">Malé náradie</div>
        <h1 class="section-title">Profesionálne náradie pre každý projekt</h1>
        <p class="section-subtitle">
          Kompletný sortiment malého stavebného náradia a techniky pre profesionálov aj domácich majstrov
        </p>
      </div>

      <!-- Grid náradia -->
      <div class="naradie-grid">
        {naradia.map((item) => (
          <div class="naradie-card">
            <div class="naradie-image">
              <img src={item.image} alt={item.alt} loading="lazy" />
            </div>
            <div class="naradie-content">
              <h3 class="naradie-title">{item.title}</h3>
              <p class="naradie-description">{item.description}</p>
              <a href={item.url} class="naradie-link">
                Zobraziť ponuku
                <svg viewBox="0 0 24 24">
                  <path d="M8.59 16.59L13.17 12L8.59 7.41L10 6L16 12L10 18L8.59 16.59Z"/>
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>

      <!-- CTA sekcia -->
      <div class="cta-section">
        <div class="cta-content">
          <h2>Potrebujete poradiť s výberom?</h2>
          <p>Naši odborníci vám pomôžu vybrať správne náradie pre váš projekt</p>
          <div class="cta-actions">
            <a href="tel:+421948555551" class="cta-phone">
              <svg viewBox="0 0 24 24">
                <path d="M6.62 10.79a15.05 15.05 0 006.59 6.59l2.2-2.2a1 1 0 011.01-.24c1.11.37 2.31.57 3.58.57a1 1 0 011 1v3.5a1 1 0 01-1 1C12.4 21.82 2.18 11.6 2.18 3a1 1 0 011-1H6.7a1 1 0 011 1c0 1.27.2 2.47.57 3.58a1 1 0 01-.24 1.01l-2.2 2.2z"/>
              </svg>
              Zavolajte 0948 555 551
            </a>
            <a href="/kontakt" class="cta-contact">Kontaktný formulár</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* MALÉ NÁRADIE SECTION */
  .male-naradie-section {
    padding: 40px 0 120px;
    background: linear-gradient(135deg, #0a0a0a 0%, #111111 50%, #0a0a0a 100%);
    position: relative;
    overflow: hidden;
    min-height: calc(100vh - 80px);
  }

  .male-naradie-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 20%, rgba(255, 107, 0, 0.05) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(255, 107, 0, 0.03) 0%, transparent 50%);
    pointer-events: none;
  }

  .male-naradie-section::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: radial-gradient(circle at 2px 2px, rgba(255, 107, 0, 0.1) 1px, transparent 0);
    background-size: 40px 40px;
    opacity: 0.2;
    pointer-events: none;
  }

  /* BREADCRUMBS */
  .breadcrumbs {
    margin-bottom: 40px;
  }

  .breadcrumbs ol {
    display: flex;
    align-items: center;
    gap: 8px;
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: 14px;
  }

  .breadcrumbs li {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .breadcrumbs li:not(:last-child)::after {
    content: '>';
    color: var(--text-dim);
    font-weight: 600;
  }

  .breadcrumbs a {
    color: var(--brand);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .breadcrumbs a:hover {
    color: var(--brand-light);
  }

  .breadcrumbs li[aria-current="page"] {
    color: var(--text-dim);
    font-weight: 600;
  }

  /* SECTION HEADER */
  .section-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .section-badge {
    display: inline-block;
    background: linear-gradient(135deg, rgba(255, 107, 0, 0.2), rgba(255, 107, 0, 0.1));
    border: 1px solid rgba(255, 107, 0, 0.3);
    color: var(--brand);
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    padding: 8px 20px;
    border-radius: 50px;
    margin-bottom: 24px;
  }

  .section-title {
    font-size: 3.5rem;
    font-weight: 900;
    background: linear-gradient(135deg, var(--text) 0%, var(--text-dim) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 24px;
    line-height: 1.1;
  }

  .section-subtitle {
    font-size: 1.25rem;
    color: var(--text-dim);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* NÁRADIE GRID */
  .naradie-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 32px;
    margin-bottom: 80px;
  }

  .naradie-card {
    background: rgba(17, 17, 17, 0.8);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .naradie-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 107, 0, 0.05) 0%, transparent 50%);
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .naradie-card:hover::before {
    opacity: 1;
  }

  .naradie-card:hover {
    transform: translateY(-8px);
    border-color: rgba(255, 107, 0, 0.4);
    box-shadow: 0 20px 60px rgba(255, 107, 0, 0.15);
  }

  /* NÁRADIE OBRÁZOK */
  .naradie-image {
    height: 200px;
    background: #ffffff;
    overflow: hidden;
    position: relative;
  }

  .naradie-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 0.3s ease;
  }

  .naradie-card:hover .naradie-image img {
    transform: scale(1.05);
  }

  /* NÁRADIE OBSAH */
  .naradie-content {
    padding: 32px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .naradie-title {
    font-size: 1.25rem;
    font-weight: 800;
    color: var(--text);
    margin-bottom: 12px;
    line-height: 1.3;
  }

  .naradie-description {
    font-size: 0.95rem;
    color: var(--text-dim);
    margin-bottom: 24px;
    line-height: 1.5;
    flex-grow: 1;
  }

  .naradie-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: linear-gradient(135deg, var(--brand), var(--brand-light));
    color: #000;
    text-decoration: none;
    font-weight: 700;
    font-size: 14px;
    padding: 12px 24px;
    border-radius: 50px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .naradie-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(255, 107, 0, 0.4);
  }

  .naradie-link svg {
    width: 16px;
    height: 16px;
    fill: currentColor;
    transition: transform 0.3s ease;
  }

  .naradie-link:hover svg {
    transform: translateX(2px);
  }

  /* CTA SECTION */
  .cta-section {
    background: linear-gradient(135deg, rgba(255, 107, 0, 0.1), rgba(255, 107, 0, 0.05));
    border: 1px solid rgba(255, 107, 0, 0.3);
    border-radius: 24px;
    padding: 60px 40px;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .cta-section::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 50% 50%, rgba(255, 107, 0, 0.05) 0%, transparent 70%);
    pointer-events: none;
  }

  .cta-content h2 {
    font-size: 2rem;
    font-weight: 800;
    color: var(--text);
    margin-bottom: 16px;
  }

  .cta-content p {
    font-size: 1.1rem;
    color: var(--text-dim);
    margin-bottom: 32px;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-actions {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
  }

  .cta-phone {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background: linear-gradient(135deg, var(--brand), var(--brand-light));
    color: #000;
    text-decoration: none;
    font-weight: 800;
    font-size: 16px;
    padding: 16px 32px;
    border-radius: 50px;
    transition: all 0.3s ease;
  }

  .cta-phone:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 35px rgba(255, 107, 0, 0.4);
  }

  .cta-phone svg {
    width: 20px;
    height: 20px;
    fill: currentColor;
  }

  .cta-contact {
    display: inline-flex;
    align-items: center;
    background: transparent;
    border: 2px solid var(--brand);
    color: var(--brand);
    text-decoration: none;
    font-weight: 700;
    font-size: 16px;
    padding: 14px 30px;
    border-radius: 50px;
    transition: all 0.3s ease;
  }

  .cta-contact:hover {
    background: var(--brand);
    color: #000;
    transform: translateY(-2px);
  }

  /* RESPONSIVE */
  @media (max-width: 768px) {
    .male-naradie-section {
      padding: 20px 0 80px;
    }

    .section-header {
      margin-bottom: 60px;
    }

    .section-title {
      font-size: 2.5rem;
    }

    .naradie-grid {
      grid-template-columns: 1fr;
      gap: 24px;
      margin-bottom: 60px;
    }

    .naradie-card {
      max-width: 100%;
    }

    .cta-section {
      padding: 40px 24px;
    }

    .cta-content h2 {
      font-size: 1.5rem;
    }

    .cta-actions {
      flex-direction: column;
    }
  }

  @media (max-width: 480px) {
    .section-title {
      font-size: 2rem;
    }

    .naradie-image {
      height: 160px;
    }

    .naradie-image img {
      width: 100px;
      height: 100px;
    }

    .naradie-content {
      padding: 24px;
    }

    .breadcrumbs {
      margin-bottom: 20px;
    }
  }

  /* FOCUS STATES */
  .naradie-card:focus-within {
    outline: 2px solid var(--brand);
    outline-offset: 4px;
  }

  .naradie-link:focus,
  .cta-phone:focus,
  .cta-contact:focus {
    outline: 2px solid var(--brand);
    outline-offset: 2px;
  }

  /* ACCESSIBILITY */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>