---
import Layout from '../../../layouts/Layout.astro';

const pageTitle = "Malé náradie – ROYAL STROJE";
const pageDescription =
  "Profesionálne malé stavebné náradie na prenájom v Senci a okolí. Vŕtačky, brúsky, píly, vysávače, čerpadlá, zváracia a meracia technika, betonárske náradie, lešenie a záhrada.";

// Kategórie malého náradia (opravené URL + ALT + poradie)
const naradia = [
  {
    title: "Vŕtacie búracie kladivá a vŕtačky",
    description: "Vŕtanie do betónu, muriva a ocele. SDS-Plus / SDS-Max, príslušenstvo a korunky.",
    image: "/images/male-naradie/vrtacky.webp",
    alt: "Profesionálne vŕtačky a búracie kladivá",
    url: "/pozicovna-naradia/male-naradie/vrtacie-buracie-kladiva-a-vrtacky"
  },
  {
    title: "Uhlové, vibračné a pásové brúsky",
    description: "Rezanie a brúsenie kovu, kameňa a betónu. Kotúče a diamantové segmenty.",
    image: "/images/male-naradie/brusky.webp",
    alt: "Uhlové, vibračné a pásové brúsky",
    url: "/pozicovna-naradia/male-naradie/uhlove-vibracne-a-pasove-brusky"
  },
  {
    title: "Ručné píly a rezačky",
    description: "Píly na drevo, kov a plast, chvostovky, chvostové listy a rezačky.",
    image: "/images/male-naradie/pily.webp",
    alt: "Ručné píly a rezačky",
    url: "/pozicovna-naradia/male-naradie/rucne-pily-a-rezacky"
  },
  {
    title: "Vysávače, tepovače a tlakové čističe",
    description: "Priemyselné vysávače, mokré/suché čistenie, tlakové čističe a príslušenstvo.",
    image: "/images/male-naradie/vysavace.webp",
    alt: "Vysávače a tlakové čističe",
    url: "/pozicovna-naradia/male-naradie/vysavace-tepovace-a-tlakove-cistice"
  },
  {
    title: "Čerpadlá, ohrievače a odvlhčovače",
    description: "Ponorné, kalové a povrchové čerpadlá, naftové ohrievače, odvlhčovače stavieb.",
    image: "/images/male-naradie/cerpadla.webp",
    alt: "Čerpadlá, ohrievače a odvlhčovače",
    url: "/pozicovna-naradia/male-naradie/cerpadla-ohrievace-a-odvlhcovace"
  },
  {
    title: "Zváracia a meracia technika",
    description: "Invertory, CO₂, elektrocentrály, lasery, rotačné lasery a detektory.",
    image: "/images/male-naradie/zvaranie.webp",
    alt: "Zváracia a meracia technika",
    url: "/pozicovna-naradia/male-naradie/zvaracia-a-meracia-technika"
  },
  {
    title: "Vibrátory, vibračné lišty a miešadlá",
    description: "Zhutňovanie a miešanie betónových zmesí, hriadeľové vibrátory a lišty.",
    image: "/images/male-naradie/vibratory.webp",
    alt: "Betonárske vibrátory a miešadlá",
    url: "/pozicovna-naradia/male-naradie/vibratory-vibracne-listy-a-miesadla"
  },
  {
    title: "Lešenie",
    description: "Systémové a pojazdné lešenie pre interiér aj exteriér.",
    image: "/images/male-naradie/lesenie.webp",
    alt: "Systémové lešenie",
    url: "/pozicovna-naradia/male-naradie/lesenie"
  },
  {
    title: "Záhradná technika",
    description: "Kosačky, krovinorezy, reťazové píly, prevzdušňovače a príslušenstvo.",
    image: "/images/male-naradie/zahrada.webp",
    alt: "Záhradná technika",
    url: "/pozicovna-naradia/male-naradie/zahradna-technika"
  },
  {
    title: "Nádrže na vodu a naftu",
    description: "IBC kontajnery, mobilné nádrže a príslušenstvo na manipuláciu.",
    image: "/images/male-naradie/nadrze.webp",
    alt: "Skladovacie nádrže na vodu a naftu",
    url: "/pozicovna-naradia/male-naradie/nadrze-na-vodu-a-naftu"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <section class="male-naradie">
    <div class="container">
      <!-- Breadcrumbs -->
      <nav class="breadcrumbs" aria-label="Breadcrumb">
        <ol>
          <li><a href="/">Domov</a></li>
          <li><a href="/pozicovna-naradia">Požičovňa náradia</a></li>
          <li aria-current="page">Malé náradie</li>
        </ol>
      </nav>

      <!-- Header -->
      <header class="header">
        <span class="badge">Malé náradie</span>
        <h1>Profesionálne náradie pre každý projekt</h1>
        <p>
          Kompletný sortiment malého stavebného náradia a techniky pre profesionálov
          aj domácich majstrov. Spoľahlivé stroje, férové ceny a rýchla dostupnosť.
        </p>
      </header>

      <!-- Grid náradia -->
      <div class="grid">
        {naradia.map((item) => (
          <article class="card">
            <a href={item.url} class="image" aria-label={item.title}>
              <img src={item.image} alt={item.alt} loading="lazy" />
              <span class="overlay"></span>
            </a>
            <div class="content">
              <h3>{item.title}</h3>
              <p>{item.description}</p>
              <a href={item.url} class="btn-link">
                Zobraziť ponuku
                <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M8.59 16.59 13.17 12 8.59 7.41 10 6l6 6-6 6z"/></svg>
              </a>
            </div>
          </article>
        ))}
      </div>

      <!-- CTA sekcia -->
      <section class="cta">
        <div class="cta-in">
          <h2>Potrebujete poradiť s výberom?</h2>
          <p>Naši technici pomôžu vybrať správne náradie a pripravia rýchlu ponuku.</p>
          <div class="actions">
            <a href="tel:+421948555551" class="btn-primary">
              <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M6.62 10.79a15.05 15.05 0 006.59 6.59l2.2-2.2a1 1 0 011.01-.24c1.11.37 2.31.57 3.58.57a1 1 0 011 1v3.5a1 1 0 01-1 1C12.4 21.82 2.18 11.6 2.18 3a1 1 0 011-1H6.7a1 1 0 011 1c0 1.27.2 2.47.57 3.58a1 1 0 01-.24 1.01l-2.2 2.2z"/></svg>
              0948 555 551
            </a>
            <a href="/kontakt" class="btn-ghost">Kontaktný formulár</a>
          </div>
        </div>
      </section>
    </div>
  </section>
</Layout>

<style>
/* LAYOUT */
.container{max-width:1200px;margin:0 auto;padding:0 24px}
.male-naradie{
  position:relative; min-height:calc(100vh - 80px);
  padding:36px 0 110px; overflow:hidden;
  background:linear-gradient(135deg,#0a0a0a 0%,#111 50%,#0b0b0b 100%);
}
.male-naradie::before{
  content:""; position:absolute; inset:0; pointer-events:none;
  background:
    radial-gradient(60% 60% at 18% 12%, rgba(255,107,0,.08), transparent 60%),
    radial-gradient(60% 60% at 85% 88%, rgba(255,138,51,.06), transparent 58%);
}
.male-naradie::after{
  content:""; position:absolute; inset:0; pointer-events:none; opacity:.18;
  background-image:radial-gradient(circle at 2px 2px, rgba(255,107,0,.12) 1px, transparent 0);
  background-size:40px 40px;
}

/* BREADCRUMBS */
.breadcrumbs{margin-bottom:28px}
.breadcrumbs ol{display:flex;gap:10px;align-items:center;list-style:none;margin:0;padding:0;font-size:14px}
.breadcrumbs li{display:flex;gap:10px;align-items:center;color:var(--text-dim)}
.breadcrumbs li+li::before{
  content:""; display:inline-block; width:18px; height:18px; opacity:.7;
  mask:url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"><path fill="white" d="M9 18l6-6-6-6"/></svg>') no-repeat center/contain;
  background:var(--text-dim);
}
.breadcrumbs a{color:var(--brand); text-decoration:none; font-weight:700}
.breadcrumbs a:hover{color:var(--brand-light)}

/* HEADER */
.header{ text-align:center; margin:16px 0 56px }
.badge{
  display:inline-block; margin-bottom:14px; padding:8px 18px; border-radius:999px;
  background:rgba(255,107,0,.1); border:1px solid rgba(255,107,0,.28);
  color:var(--brand); font-size:12px; font-weight:900; letter-spacing:.1em; text-transform:uppercase
}
.header h1{
  margin:0 0 10px; font-size:clamp(28px,4.8vw,44px); font-weight:900;
  background:linear-gradient(135deg,var(--text) 0%, var(--text-dim) 100%);
  -webkit-background-clip:text; -webkit-text-fill-color:transparent; background-clip:text;
}
.header p{ margin:0 auto; max-width:720px; color:var(--text-dim); line-height:1.7 }

/* GRID */
.grid{
  display:grid; gap:28px;
  grid-template-columns:repeat(auto-fit, minmax(320px,1fr));
  margin-bottom:70px;
}
.card{
  position:relative; display:flex; flex-direction:column; height:100%;
  background:rgba(17,17,17,.8); border:1px solid rgba(255,255,255,.1);
  border-radius:22px; overflow:hidden; transition:transform .35s ease, border-color .35s ease, box-shadow .35s ease;
  backdrop-filter:blur(16px);
}
.card:hover{ transform:translateY(-6px); border-color:rgba(255,107,0,.42); box-shadow:0 22px 60px rgba(255,107,0,.16) }
.image{ position:relative; display:block; height:200px; background:#0f0f0f; overflow:hidden }
.image img{ width:100%; height:100%; object-fit:cover; transform:scale(1); transition:transform .4s ease }
.card:hover .image img{ transform:scale(1.06) }
.overlay{
  position:absolute; inset:0;
  background:
    linear-gradient(180deg, rgba(0,0,0,.15) 0%, rgba(0,0,0,.0) 35%, rgba(0,0,0,.25) 100%);
  pointer-events:none;
}
.content{ padding:24px 24px 22px; display:flex; flex-direction:column; gap:10px; flex:1 }
.content h3{ margin:0; color:var(--text); font-weight:900; font-size:18px; line-height:1.35 }
.content p{ margin:0 0 12px; color:var(--text-dim); line-height:1.6; flex:1 }
.btn-link{
  align-self:flex-start; display:inline-flex; align-items:center; gap:10px;
  padding:12px 18px; border-radius:999px; text-decoration:none;
  background:linear-gradient(135deg, var(--brand), var(--brand-light)); color:#000; font-weight:900; font-size:13px; letter-spacing:.06em; text-transform:uppercase;
  transition:transform .2s ease, box-shadow .2s ease;
}
.btn-link:hover{ transform:translateY(-2px); box-shadow:0 10px 28px rgba(255,107,0,.35) }
.btn-link svg{ width:18px; height:18px; fill:currentColor; }

/* CTA */
.cta{ position:relative; border:1px solid rgba(255,107,0,.3); border-radius:24px; overflow:hidden;
      background:linear-gradient(135deg, rgba(255,107,0,.1), rgba(255,107,0,.05)); }
.cta-in{ text-align:center; padding:52px 26px }
.cta h2{ margin:0 0 8px; color:var(--text); font-size:clamp(22px,3.6vw,30px); font-weight:900 }
.cta p{ margin:0 auto 18px; color:var(--text-dim); max-width:560px }
.actions{ display:flex; gap:12px; justify-content:center; flex-wrap:wrap }
.btn-primary{
  display:inline-flex; align-items:center; gap:10px; padding:14px 22px; border-radius:999px;
  background:linear-gradient(135deg, var(--brand), var(--brand-light)); color:#000; font-weight:900; text-decoration:none;
  box-shadow:0 8px 26px rgba(255,107,0,.32); transition:transform .2s ease, box-shadow .2s ease;
}
.btn-primary:hover{ transform:translateY(-2px); box-shadow:0 12px 34px rgba(255,107,0,.4) }
.btn-primary svg{ width:18px; height:18px; fill:currentColor }
.btn-ghost{
  display:inline-flex; align-items:center; padding:12px 20px; border-radius:999px; text-decoration:none;
  border:2px solid var(--brand); color:var(--brand); font-weight:900; transition:background .2s ease, color .2s ease, transform .2s ease;
}
.btn-ghost:hover{ background:var(--brand); color:#000; transform:translateY(-2px) }

/* RESPONSIVE */
@media (max-width:820px){
  .grid{ gap:22px }
  .image{ height:180px }
}
@media (max-width:520px){
  .breadcrumbs{margin-bottom:20px}
  .image{ height:160px }
  .content{ padding:20px }
}
@media (prefers-reduced-motion:reduce){
  *{ transition:none !important; animation:none !important }
}
</style>
