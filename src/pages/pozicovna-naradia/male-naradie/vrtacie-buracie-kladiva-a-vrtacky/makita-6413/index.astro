const pageTitle = "Makita 6413 - Vŕtacie kladivo | ROYAL STROJE";
const pageDescription = "Prenájom Makita 6413 vŕtacieho kladiva 450W v Seneci. Technické parametre, cena nájmu 8€/deň. Rezervácia online alebo telefonicky.";
---

<Layout title={pageTitle} description={pageDescription}>
  <section class="produkt-detail-section">
    <div class="container">
      <!-- Breadcrumbs -->
      <nav class="breadcrumbs" aria-label="Breadcrumb">
        <ol>
          <li><a href="/">Domov</a></li>
          <li><a href="/pozicovna-naradia">Požičovňa náradia</a></li>
          <li><a href="/pozicovna-naradia/male-naradie">Malé náradie</a></li>
