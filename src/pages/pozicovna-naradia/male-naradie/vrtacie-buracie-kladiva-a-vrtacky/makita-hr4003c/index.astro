---
// src/pages/pozicovna-naradia/male-naradie/vrtacie-buracie-kladiva-a-vrtacky/makita-hr4003c/index.astro
import Layout from '../../../../../layouts/Layout.astro';

const pageTitle = "Makita HR4003C - Kombinované kladivo | ROYAL STROJE";
const pageDescription = "Prenájom Makita HR4003C kombinovaného kladiva 1100W v Seneci. SDS-MAX upínanie, technické parametre, cena nájmu. Rezervácia online alebo telefonicky.";
---

<Layout title={pageTitle} description={pageDescription}>
  <section class="produkt-detail-section">
    <div class="container">
      <!-- Breadcrumbs -->
      <nav class="breadcrumbs" aria-label="Breadcrumb">
        <ol>
          <li><a href="/">Domov</a></li>
          <li><a href="/pozicovna-naradia">Požičovňa náradia</a></li>
          <li><a href="/pozicovna-naradia/male-naradie">Malé náradie</a></li>
          <li><a href="/pozicovna-naradia/male-naradie/vrtacie-buracie-kladiva-a-vrtacky">Vŕtacie kladivá</a></li>
          <li aria-current="page">Makita HR4003C</li>
        </ol>
      </nav>

      <!-- Hlavná sekcia produktu -->
      <div class="produkt-hero">
        <div class="produkt-obrazok">
          <img src="/images/produkty/vrtacie/makita-hr4003c.webp" alt="Makita HR4003C kombinované kladivo" />
        </div>
        
        <div class="produkt-info">
          <div class="produkt-badge">Kód: HR4003C</div>
          <h1 class="produkt-nazov">Makita HR4003C</h1>
          <p class="produkt-typ">Kombinované kladivo SDS-MAX</p>
          
          <div class="produkt-highlights">
            <div class="highlight-item">
              <span class="highlight-label">Výkon:</span>
              <span class="highlight-value">1100W</span>
            </div>
            <div class="highlight-item">
              <span class="highlight-label">Hmotnosť:</span>
              <span class="highlight-value highlight-weight">6.2kg</span>
            </div>
            <div class="highlight-item">
              <span class="highlight-label">Upínanie:</span>
              <span class="highlight-value">SDS-MAX</span>
            </div>
            <div class="highlight-item">
              <span class="highlight-label">Sila príklepu:</span>
              <span class="highlight-value">8.3J</span>
            </div>
            <div class="highlight-item price-row">
              <span class="highlight-label">Cena za deň:</span>
              <div class="price-container">
                <span class="highlight-value highlight-price-main">20€</span>
                <span class="price-note">bez DPH</span>
                <span class="price-with-vat">24,60€ s DPH</span>
              </div>
            </div>
            <div class="highlight-item price-row">
              <span class="highlight-label">Cena za 4 hodiny:</span>
              <div class="price-container">
                <span class="highlight-value highlight-price-main">10€</span>
                <span class="price-note">bez DPH</span>
                <span class="price-with-vat">12,30€ s DPH</span>
              </div>
            </div>
          </div>

          <div class="produkt-akcie">
            <a 
              href="mailto:info@royalstroje.sk?subject=Rezervácia Makita HR4003C&body=Dobrý deň,%0A%0Achcem si rezervovať Makita HR4003C - Kombinované kladivo%0ACena: 20€/deň alebo 10€/4h (bez DPH)%0A%0ATermín prenájmu:%0AOd:%0ADo:%0A%0AMeno:%0ATelefón:%0A%0AĎakujem"
              class="rezervovat-btn-primary"
            >
              <svg viewBox="0 0 24 24">
                <path d="M20 4H4C2.9 4 2.01 4.9 2.01 6L2 18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V6C22 4.9 21.1 4 20 4ZM20 8L12 13L4 8V6L12 11L20 6V8Z"/>
              </svg>
              Rezervovať produkt
            </a>
            
            <a href="tel:+421948555551" class="zavolat-btn">
              <svg viewBox="0 0 24 24">
                <path d="M6.62 10.79a15.05 15.05 0 006.59 6.59l2.2-2.2a1 1 0 011.01-.24c1.11.37 2.31.57 3.58.57a1 1 0 011 1v3.5a1 1 0 01-1 1C12.4 21.82 2.18 11.6 2.18 3a1 1 0 011-1H6.7a1 1 0 011 1c0 1.27.2 2.47.57 3.58a1 1 0 01-.24 1.01l-2.2 2.2z"/>
              </svg>
              Zavolať 0948 555 551
            </a>
          </div>
        </div>
      </div>

      <!-- Cenník a informácie -->
      <div class="cennik-section">
        <h2>Cenník a informácie ku prenájmu</h2>
        <div class="cennik-content">
          <div class="cennik-hlavny">
            <div class="cena-item">
              <span class="cena-label">Deň (24 hodín):</span>
              <div class="cena-group">
                <span class="cena-hodnota">20€</span>
                <span class="cena-note">bez DPH</span>
                <span class="cena-vat">24,60€ s DPH</span>
              </div>
            </div>
            <div class="cena-item">
              <span class="cena-label">Pol dňa (4 hodiny):</span>
              <div class="cena-group">
                <span class="cena-hodnota">10€</span>
                <span class="cena-note">bez DPH</span>
                <span class="cena-vat">12,30€ s DPH</span>
              </div>
            </div>
            <div class="cena-item">
              <span class="cena-label">Kaucia pre nových zákazníkov:</span>
              <div class="cena-group">
                <span class="cena-hodnota kaucia">200€</span>
                <span class="cena-note">vrátane DPH</span>
              </div>
            </div>
          </div>
          
          <div class="cennik-poznamky">
            <div class="poznamka-item">
              <svg viewBox="0 0 24 24">
                <path d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <p><strong>Víkendový prenájom:</strong> Od piatku 12:00 do pondelka 10:00 sa účtuje ako jeden deň.</p>
            </div>
            <div class="poznamka-item">
              <svg viewBox="0 0 24 24">
                <path d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
              </svg>
              <p><strong>Dlhší prenájom:</strong> Pri prenájme na viac ako 3 dni poskytujeme výhodnú cenu. Kontaktujte nás pre individuálnu ponuku.</p>
            </div>
            <div class="poznamka-item">
              <svg viewBox="0 0 24 24">
                <path d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
              <p><strong>Príslušenstvo:</strong> Ku tomuto produktu si môžete prenajať SDS-MAX vrtáky a sekáče podľa cenníka nižšie.</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Technické parametre -->
      <div class="technicke-parametre">
        <h2>Technické parametre</h2>
        <div class="parametre-grid">
          <div class="parameter-item">
            <span class="parameter-label">Upínanie:</span>
            <span class="parameter-value">SDS-MAX</span>
          </div>
          <div class="parameter-item">
            <span class="parameter-label">Príkon:</span>
            <span class="parameter-value">1100W</span>
          </div>
          <div class="parameter-item">
            <span class="parameter-label">Voľnobežné otáčky:</span>
            <span class="parameter-value">250-500 min⁻¹</span>
          </div>
          <div class="parameter-item">
            <span class="parameter-label">Počet úderov naprázdno:</span>
            <span class="parameter-value">1450-2900 min⁻¹</span>
          </div>
          <div class="parameter-item">
            <span class="parameter-label">Sila jednotlivého príklepu:</span>
            <span class="parameter-value">8.3J</span>
          </div>
          <div class="parameter-item">
            <span class="parameter-label">Max. vŕtací výkon (vrták):</span>
            <span class="parameter-value">40 mm</span>
          </div>
          <div class="parameter-item">
            <span class="parameter-label">Max. vŕtací výkon (korunka):</span>
            <span class="parameter-value">105 mm</span>
          </div>
          <div class="parameter-item highlight-param">
            <span class="parameter-label">Hmotnosť:</span>
            <span class="parameter-value">6.2 kg</span>
          </div>
          <div class="parameter-item">
            <span class="parameter-label">Rozmery (D x Š x V):</span>
            <span class="parameter-value">474x106x263 mm</span>
          </div>
        </div>
      </div>

      <!-- Vlastnosti -->
      <div class="vlastnosti-section">
        <h2>Vlastnosti a výhody</h2>
        <ul class="vlastnosti-list">
          <li>Spoľahlivé kombinované kladivo s možnosťou vŕtania, vŕtania s príklepom aj sekaním</li>
          <li>Precízne upínanie SDS-MAX pre maximálnu prenosnosť energie</li>
          <li>Variabilné ovládanie rýchlosti a plynulý rozbeh</li>
          <li>Elektronicky nastaviteľná rýchlosť / rýchlosť úderov</li>
          <li>Elektronický vypínač s možnosťou aretácie</li>
          <li>Signalizácia opotrebovaných uhlíkov a poškodenia kábla alebo vypínača</li>
          <li>36 - polohové nastavenie nástroja</li>
          <li>Praktická spojka chráni obsluhu v prípade zaseknutia nástroja</li>
        </ul>
      </div>

      <!-- Doplnkové príslušenstvo -->
      <div class="prislusenstvo-section">
        <h2>Doplnkové príslušenstvo ku tomuto produktu na prenájom</h2>
        
        <div class="prislusenstvo-kategorie">
          <div class="kategoria-box">
            <h3>SDS-MAX Vrtáky - Kalkulačka cien</h3>
            <p class="kategoria-popis">Vypočítajte si cenu vrtákov podľa priemeru</p>
            
            <!-- Kalkulačka vrtákov -->
            <div class="vrtak-calculator">
              <div class="calculator-input">
                <label for="vrtakPriemer">Priemer vrtáka (mm):</label>
                <input type="number" id="vrtakPriemer" min="6" max="50" value="20" />
                <div class="calculator-result">
                  <span class="result-label">Cena za deň:</span>
                  <div class="result-values">
                    <span class="result-value" id="vrtakCena">2,00€ bez DPH</span>
                    <span class="result-value-vat" id="vrtakCenaDPH">2,46€ s DPH</span>
                  </div>
                </div>
                <div class="result-formula">
                  <small>Vzorec: priemer (mm) × 0,10€ (bez DPH)</small>
                </div>
              </div>
            </div>
          </div>

          <div class="kategoria-box">
            <h3>SDS-MAX Sekáče a doplnky</h3>
            <p class="kategoria-popis">Profesionálne príslušenstvo pre ťažké práce</p>
            <div class="prislusenstvo-grid">
              <div class="prislusenstvo-item">
                <span class="prislusenstvo-nazov">Sekáč špicatý SDS-MAX</span>
                <span class="prislusenstvo-cena">3€ bez DPH</span>
              </div>
              <div class="prislusenstvo-item">
                <span class="prislusenstvo-nazov">Sekáč plochý SDS-MAX</span>
                <span class="prislusenstvo-cena">3€ bez DPH</span>
              </div>
              <div class="prislusenstvo-item">
                <span class="prislusenstvo-nazov">Predlžovací kábel 50m (bubon)</span>
                <span class="prislusenstvo-cena">3€ bez DPH</span>
              </div>
            </div>
          </div>
        </div>

        <div class="prislusenstvo-poznamka">
          <p><strong>Poznámka:</strong> Príslušenstvo je k dispozícii priamo na našej prevádzke. Všetky ceny sú za prenájom na jeden deň spolu s hlavným produktom. DPH 23%.</p>
        </div>
      </div>

      <!-- CTA sekcia -->
      <div class="cta-section">
        <div class="cta-content">
          <h2>Pripravený na rezerváciu?</h2>
          <p>Kontaktujte nás pre rezerváciu alebo ďalšie informácie o Makita HR4003C</p>
          <div class="cta-actions">
            <a 
              href="mailto:info@royalstroje.sk?subject=Rezervácia Makita HR4003C&body=Dobrý deň,%0A%0Achcem si rezervovať Makita HR4003C%0A%0ATermín prenájmu:%0AOd:%0ADo:%0A%0AMeno:%0ATelefón:"
              class="cta-email"
            >
              <svg viewBox="0 0 24 24">
                <path d="M20 4H4C2.9 4 2.01 4.9 2.01 6L2 18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V6C22 4.9 21.1 4 20 4ZM20 8L12 13L4 8V6L12 11L20 6V8Z"/>
              </svg>
              Rezervovať emailom
            </a>
            <a href="tel:+421948555551" class="cta-phone">
              <svg viewBox="0 0 24 24">
                <path d="M6.62 10.79a15.05 15.05 0 006.59 6.59l2.2-2.2a1 1 0 011.01-.24c1.11.37 2.31.57 3.58.57a1 1 0 011 1v3.5a1 1 0 01-1 1C12.4 21.82 2.18 11.6 2.18 3a1 1 0 011-1H6.7a1 1 0 011 1c0 1.27.2 2.47.57 3.58a1 1 0 01-.24 1.01l-2.2 2.2z"/>
              </svg>
              Zavolajte 0948 555 551
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  :root {
    --brand: #ff6b00;
    --brand-light: #ff8533;
    --brand-dark: #e85d00;
    --text: #ffffff;
    --text-dim: #b0b0b0;
    --bg: #0a0a0a;
    --bg-secondary: #111111;
  }

  .produkt-detail-section {
    padding: 40px 0 120px;
    background: linear-gradient(135deg, #0a0a0a 0%, #111111 50%, #0a0a0a 100%);
    position: relative;
    overflow: hidden;
    min-height: calc(100vh - 80px);
  }

  .produkt-detail-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 20%, rgba(255, 107, 0, 0.05) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(255, 107, 0, 0.03) 0%, transparent 50%);
    pointer-events: none;
  }

  .produkt-detail-section::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: radial-gradient(circle at 2px 2px, rgba(255, 107, 0, 0.1) 1px, transparent 0);
    background-size: 40px 40px;
    opacity: 0.2;
    pointer-events: none;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 1;
  }

  .breadcrumbs {
    margin-bottom: 40px;
  }

  .breadcrumbs ol {
    display: flex;
    align-items: center;
    gap: 8px;
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: 14px;
    flex-wrap: wrap;
  }

  .breadcrumbs li {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .breadcrumbs li:not(:last-child)::after {
    content: '>';
    color: var(--text-dim);
    font-weight: 600;
  }

  .breadcrumbs a {
    color: var(--brand);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .breadcrumbs a:hover {
    color: var(--brand-light);
  }

  .breadcrumbs li[aria-current="page"] {
    color: var(--text-dim);
    font-weight: 600;
  }

  .produkt-hero {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    margin-bottom: 80px;
    align-items: start;
  }

  .produkt-obrazok {
    background: #ffffff;
    border-radius: 20px;
    padding: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 400px;
  }

  .produkt-obrazok img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .produkt-info {
    padding: 20px 0;
  }

  .produkt-badge {
    background: rgba(255, 107, 0, 0.1);
    border: 1px solid rgba(255, 107, 0, 0.3);
    color: var(--brand);
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    padding: 4px 12px;
    border-radius: 12px;
    display: inline-block;
    margin-bottom: 16px;
  }

  .produkt-nazov {
    font-size: 2.5rem;
    font-weight: 900;
    color: var(--text);
    margin-bottom: 8px;
    line-height: 1.2;
  }

  .produkt-typ {
    font-size: 1.2rem;
    color: var(--brand);
    font-weight: 600;
    margin-bottom: 32px;
  }

  .produkt-highlights {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 24px;
    margin-bottom: 32px;
  }

  .highlight-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 8px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .highlight-item:last-child {
    border-bottom: none;
  }

  .highlight-item.price-row {
    align-items: flex-start;
  }

  .highlight-label {
    font-size: 1rem;
    color: var(--text-dim);
    font-weight: 600;
  }

  .highlight-value {
    font-size: 1rem;
    color: var(--text);
    font-weight: 700;
  }

  .highlight-weight {
    background: linear-gradient(135deg, rgba(255, 107, 0, 0.15), rgba(255, 107, 0, 0.08));
    border: 1px solid rgba(255, 107, 0, 0.25);
    padding: 4px 12px;
    border-radius: 8px;
  }

  .price-container {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 2px;
  }

  .highlight-price-main {
    background: linear-gradient(135deg, var(--brand), var(--brand-light));
    color: #000;
    padding: 8px 16px;
    border-radius: 12px;
    font-size: 1.3rem;
    font-weight: 900;
  }

  .price-note {
    font-size: 0.8rem;
    color: var(--brand);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .price-with-vat {
    font-size: 0.9rem;
    color: var(--text-dim);
    font-weight: 500;
  }

  .produkt-akcie {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .rezervovat-btn-primary {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    background: linear-gradient(135deg, var(--brand), var(--brand-light));
    color: #000;
    text-decoration: none;
    font-weight: 800;
    font-size: 16px;
    padding: 16px 32px;
    border-radius: 50px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .rezervovat-btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 35px rgba(255, 107, 0, 0.4);
  }

  .rezervovat-btn-primary svg {
    width: 20px;
    height: 20px;
    fill: currentColor;
  }

  .zavolat-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    background: transparent;
    border: 2px solid var(--brand);
    color: var(--brand);
    text-decoration: none;
    font-weight: 700;
    font-size: 16px;
    padding: 14px 32px;
    border-radius: 50px;
    transition: all 0.3s ease;
  }

  .zavolat-btn:hover {
    background: rgba(255, 107, 0, 0.1);
    transform: translateY(-1px);
  }

  .zavolat-btn svg {
    width: 18px;
    height: 18px;
    fill: currentColor;
  }

  .cennik-section {
    background: rgba(17, 17, 17, 0.8);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    padding: 40px;
    margin-bottom: 80px;
  }

  .cennik-section h2 {
    color: var(--text);
    font-size: 1.8rem;
    font-weight: 800;
    margin-bottom: 32px;
    text-align: center;
  }

  .cennik-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .cennik-hlavny {
    background: rgba(255, 107, 0, 0.05);
    border: 1px solid rgba(255, 107, 0, 0.2);
    border-radius: 16px;
    padding: 24px;
    margin-bottom: 32px;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .cena-item {
    text-align: center;
  }

  .cena-label {
    display: block;
    color: var(--text-dim);
    font-size: 0.95rem;
    font-weight: 600;
    margin-bottom: 8px;
  }

  .cena-group {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
  }

  .cena-hodnota {
    color: var(--brand);
    font-size: 2rem;
    font-weight: 900;
  }

  .cena-hodnota.kaucia {
    color: #ff4444;
  }

  .cena-note {
    font-size: 0.8rem;
    color: var(--brand);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .cena-vat {
    font-size: 0.9rem;
    color: var(--text-dim);
    font-weight: 500;
  }

  .cennik-poznamky {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .poznamka-item {
    display: flex;
    align-items: flex-start;
    gap: 16px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    padding: 20px;
  }

