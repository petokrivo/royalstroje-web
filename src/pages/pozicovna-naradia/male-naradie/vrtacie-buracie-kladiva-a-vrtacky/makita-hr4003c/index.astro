<script>
  document.addEventListener('DOMContentLoaded', function() {
    console.log('Makita HR4003C product page loaded successfully');
    
    // Kalkulačka vrtákov
    const vrtakInput = document.getElementById('vrtakPriemer');
    const vrtakCena = document.getElementById('vrtakCena');
    const vrtakCenaDPH = document.getElementById('vrtakCenaDPH');
    
    function updateVrtakPrice() {
      const priemer = parseFloat(vrtakInput.value) || 0;
      const cenaBezDPH = priemer * 0.10;
      const cenaSdph = cenaBezDPH * 1.23;
      
      vrtakCena.textContent = `${cenaBezDPH.toFixed(2)}€ bez DPH`;
      vrtakCenaDPH.textContent = `${cenaSdph.toFixed(2)}€ s DPH`;
    }
    
    vrtakInput.addEventListener('input', updateVrtakPrice);
    updateVrtakPrice(); // Initial calculation
  });
</script>