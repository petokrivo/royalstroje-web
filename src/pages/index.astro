---
import Layout from "../layouts/Layout.astro";

const PHONE = "+421 948 555 551";
const EMAIL = "info@royalstroje.sk";
const MAPS = "https://www.google.com/maps/search/?api=1&query=48.22442423409257%2C17.41841256196949";

// Hlavné 3 služby
const mainServices = [
  {
    title: "Požičovňa náradia a techniky",
    description: "Vlastná i sprostredkovaná technika od malého náradia až po najväčšie mechanizácie. Všetko pod jednou strechou bez zbytočného papierovania.",
    image: "/images/pozicovna.jpg",
    href: "/pozicovna-naradia/",
    features: ["Vlastný strojový park", "Okamžitá dostupnosť", "Doprava zahrnutá"]
  },
  {
    title: "Zemné a búracie práce",
    description: "Výkopy, demolácie, planírovanie. Naša technika a skúsení strojníci vyriešia všetko od malých výkopov až po veľké projekty.",
    image: "/images/zemne-buracie.jpg",
    href: "/zemne-buracie-prace/",
    features: ["Vlastní strojníci", "Odvoz sutiny", "Celé Slovensko"]
  },
  {
    title: "Predaj náradia a materiálu",
    description: "Diamantové kotúče, vŕtaky, spotrebný materiál. Kvalitné náradie za férové ceny s odborným poradenstvom pri výbere.",
    image: "/images/predaj.jpg",
    href: "/predaj/",
    features: ["Prémiové značky", "Skladom v Senci", "Odborné poradenstvo"]
  }
];

// Doplnkové služby
const additionalServices = [
  {
    title: "Servis a náhradné diely",
    description: "Opravy a údržba techniky. Máme náhradné diely a servisíme rôzne značky.",
    image: "/images/servis.jpg",
    href: "/servis/"
  },
  {
    title: "Dovoz techniky",
    description: "Dopravu techniky na stavbu vyriešime rýchlo a spoľahlivo.",
    image: "/images/dovoz.jpg",
    href: "/dovoz/"
  },
  {
    title: "Technická podpora",
    description: "Sme tu pre vás 24/7. Urgentné zásahy riešime aj mimo pracovných hodín.",
    image: "/images/podpora.jpg",
    href: "/podpora/"
  }
];
---

<Layout title="ROYAL STROJE - Požičovňa náradia a stavebnej techniky" description="Prenájom stavebnej techniky, zemné a búracie práce, predaj náradia. 15 rokov skúseností. Senec a celé Slovensko.">
  
  <!-- HERO SECTION -->
  <section class="hero">
    <img class="hero-bg" src="/assets/hero/pozadie.webp" alt="" aria-hidden="true" />
    <div class="hero-overlay"></div>
    
    <img class="hero-deco deco-left" src="/assets/hero/bager.webp" alt="" aria-hidden="true" />
    <img class="hero-deco deco-right" src="/assets/hero/kladivo.webp" alt="" aria-hidden="true" />

    <div class="hero-content">
      <div class="container">
        <div class="hero-badge">
          <span>Profesionálny prenájom stavebnej techniky</span>
        </div>

        <h1 class="hero-title">
          Požičovňa <span class="accent">náradia</span>, stavebných
          <span class="accent">strojov</span> a príslušenstva
        </h1>

        <ul class="benefits">
          <li>
            <svg class="benefit-icon" viewBox="0 0 24 24">
              <circle cx="12" cy="12" r="3"/>
              <path d="M12 1v6M12 17v6M4.22 4.22l4.24 4.24M15.54 15.54l4.24 4.24M1 12h6M17 12h6M4.22 19.78l4.24-4.24M15.54 8.46l4.24-4.24"/>
            </svg>
            <span>Férové ceny</span>
          </li>
          <li>
            <svg class="benefit-icon" viewBox="0 0 24 24">
              <path d="M18 18.5a1.5 1.5 0 0 1-3 0 1.5 1.5 0 0 1 3 0zM19.5 9.5l-1.91-5.54A2 2 0 0 0 15.69 3H12v6h7.5zM12 15.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zM6.5 18.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zM12 9H2v6h1a3 3 0 0 1 6 0h6a3 3 0 0 1 6 0h1v-6z"/>
            </svg>
            <span>Rýchla doprava</span>
          </li>
          <li>
            <svg class="benefit-icon" viewBox="0 0 24 24">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <path d="M22 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75"/>
            </svg>
            <span>Profesionálni strojníci</span>
          </li>
          <li>
            <svg class="benefit-icon" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>Priateľská komunikácia</span>
          </li>
        </ul>

        <div class="hero-cta">
          <a class="btn btn-primary" href={`tel:${PHONE.replace(/\s/g,"")}`}>
            <svg class="btn-icon" viewBox="0 0 24 24">
              <path d="M6.62 10.79a15.05 15.05 0 006.59 6.59l2.2-2.2a1 1 0 011.01-.24c1.11.37 2.31.57 3.58.57a1 1 0 011 1v3.5a1 1 0 01-1 1C12.4 21.82 2.18 11.6 2.18 3a1 1 0 011-1H6.7a1 1 0 011 1c0 1.27.2 2.47.57 3.58a1 1 0 01-.24 1.01l-2.2 2.2z"/>
            </svg>
            {PHONE}
          </a>
          <a class="btn btn-secondary" href={`mailto:${EMAIL}`}>
            <svg class="btn-icon" viewBox="0 0 24 24">
              <path d="M4 4h16a2 2 0 012 2v12a2 2 0 01-2 2H4a2 2 0 01-2-2V6a2 2 0 012-2zm0 3.9l8 5 8-5V6l-8 5-8-5v1.9z"/>
            </svg>
            {EMAIL}
          </a>
          <a class="btn btn-secondary" href="https://wa.me/421948555551" target="_blank" rel="noopener">
            <svg class="btn-icon" viewBox="0 0 24 24">
              <path d="M20.52 3.48A11.9 11.9 0 0012.06 0C5.5 0 .2 5.3.2 11.86c0 2.09.55 4.08 1.6 5.87L0 24l6.45-1.67a11.7 11.7 0 005.61 1.43h.01c6.56 0 11.86-5.3 11.86-11.86 0-3.18-1.24-6.17-3.41-8.42zM12.07 21.1h-.01a9.25 9.25 0 01-4.72-1.29l-.34-.2-3.83.99 1.02-3.73-.22-.38a9.24 9.24 0 01-1.41-4.83c0-5.12 4.18-9.29 9.31-9.29 2.49 0 4.83.97 6.59 2.73a9.23 9.23 0 012.71 6.57c0 5.12-4.18 9.3-9.31 9.3z"/>
            </svg>
            WhatsApp
          </a>
          <a class="btn btn-secondary" href="https://t.me/petokrivo" target="_blank" rel="noopener">
            <svg class="btn-icon" viewBox="0 0 24 24">
              <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
            </svg>
            Telegram
          </a>
        </div>

        <div class="address">
          <svg class="address-icon" viewBox="0 0 24 24">
            <path d="M12 2a7 7 0 00-7 7c0 5.25 7 13 7 13s7-7.75 7-13a7 7 0 00-7-7zm0 9.5A2.5 2.5 0 119.5 9 2.5 2.5 0 0112 11.5z"/>
          </svg>
          <a href={MAPS} target="_blank" rel="noopener">Récka cesta 182, Senec 903 01</a>
        </div>
      </div>
    </div>
  </section>

  <!-- TRANSITION SECTION -->
  <section class="transition-section">
    <div class="section-wave">
      <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path d="M321.39,56.44C187.11,91.18,121.55,126.46,0,134.64V0H1200V0C1073.5,18.55,944.72,59.95,806.04,69.46C729.84,74.58,461.25,37.34,321.39,56.44Z"/>
      </svg>
    </div>
    <div class="container">
      <div class="stats">
        <div class="stat">
          <div class="stat-number">15+</div>
          <div class="stat-label">Rokov skúseností</div>
        </div>
        <div class="stat">
          <div class="stat-number">950+</div>
          <div class="stat-label">Spokojných zákazníkov</div>
        </div>
        <div class="stat">
          <div class="stat-number">24/7</div>
          <div class="stat-label">Technická podpora</div>
        </div>
      </div>
    </div>
  </section>

  <!-- MAIN SERVICES SECTION -->
  <section class="main-services">
    <div class="container">
      <div class="section-header">
        <h2>Naše hlavné služby</h2>
        <p>Všetko čo potrebujete pod jednou strechou</p>
      </div>

      <div class="services-grid-main">
        {mainServices.map((service, index) => (
          <a href={service.href} class="service-card-main" style={`animation-delay: ${index * 0.2}s`}>
            <div class="card-image">
              <img src={service.image} alt={service.title} loading="lazy" />
              <div class="card-overlay"></div>
            </div>
            <div class="card-content">
              <h3>{service.title}</h3>
              <p>{service.description}</p>
              <ul class="card-features">
                {service.features.map((feature) => (
                  <li>
                    <svg viewBox="0 0 24 24">
                      <path d="M20 6L9 17l-5-5"/>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
              <div class="card-arrow">
                <span>Zistiť viac</span>
                <svg viewBox="0 0 24 24">
                  <path d="M5 12h14m-7-7l7 7-7 7"/>
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- WHY ROYAL STROJE SECTION -->
  <section class="why-royal">
    <div class="container">
      <div class="why-content">
        <div class="why-text">
          <h2>Prečo práve ROYAL STROJE?</h2>
          <p class="why-intro">
            <strong>15 rokov skúseností</strong> v prenájme stavebnej techniky. 
            Vyriešime to za vás – rýchlo, fér a bez zbytočných komplikácií.
          </p>
          
          <div class="why-points">
            <div class="why-point">
              <div class="point-icon">
                <svg viewBox="0 0 24 24">
                  <path d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2zM8 21l8-4-8-4v8z"/>
                </svg>
              </div>
              <div class="point-content">
                <h4>Vlastná + sprostredkovaná technika</h4>
                <p>Čo nemáme u nás, zabezpečíme cez partnerov za výhodnejšie ceny. Zavolajte raz, vybavíte všetko.</p>
              </div>
            </div>

            <div class="why-point">
              <div class="point-icon">
                <svg viewBox="0 0 24 24">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              </div>
              <div class="point-content">
                <h4>VIP program pre stálych klientov</h4>
                <p>Žiadne zálohy, prioritné vybavovanie, automatické zľavy a osobný kontakt aj mimo pracovných hodín.</p>
              </div>
            </div>

            <div class="why-point">
              <div class="point-icon">
                <svg viewBox="0 0 24 24">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div class="point-content">
                <h4>Bez zbytočného papierovania</h4>
                <p>Žiadne nezmyselné poplatky. Postavili sme biznis na férovom prístupe a zdravom rozume.</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="why-visual">
          <div class="visual-card">
            <div class="visual-header">
              <h4>Peter Krivosudský</h4>
              <p>Konateľ spoločnosti</p>
            </div>
            <blockquote>
              "S ROYAL STROJE som chcel ukázať, že sa to celé dá robiť jednoduchšie a efektívnejšie. Stačí postaviť biznis na spoľahlivých ľuďoch a dobre nastavenom systéme."
            </blockquote>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ADDITIONAL SERVICES -->
  <section class="additional-services">
    <div class="section-wave-top">
      <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path d="M985.66,92.83C906.67,72,823.78,31,743.84,14.19C665.94,-1.68,568.07,7.83,466.31,20.84C346.32,37.68,217.57,58.89,102.44,94.45C75.85,103,49.88,112.14,29.11,121.18L0,134.64V0H1200V120.35C1138.51,86.66,1070.19,101.5,985.66,92.83Z"/>
      </svg>
    </div>
    <div class="container">
      <div class="section-header">
        <h2>Doplnkové služby</h2>
        <p>Kompletné riešenia pre váš projekt</p>
      </div>

      <div class="services-grid-additional">
        {additionalServices.map((service, index) => (
          <a href={service.href} class="service-card-small" style={`animation-delay: ${index * 0.1}s`}>
            <div class="card-image-small">
              <img src={service.image} alt={service.title} loading="lazy" />
            </div>
            <div class="card-content-small">
              <h4>{service.title}</h4>
              <p>{service.description}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CONTACT CTA -->
  <section class="contact-cta">
    <div class="container">
      <div class="cta-content">
        <div class="cta-text">
          <h2>Potrebujete poradiť s výberom?</h2>
          <p>Zavolajte alebo napíšte. Vyriešime to za vás bez zbytočných komplikácií.</p>
        </div>
        <div class="cta-actions">
          <a href={`tel:${PHONE.replace(/\s/g,"")}`} class="btn btn-primary">
            <svg class="btn-icon" viewBox="0 0 24 24">
              <path d="M6.62 10.79a15.05 15.05 0 006.59 6.59l2.2-2.2a1 1 0 011.01-.24c1.11.37 2.31.57 3.58.57a1 1 0 011 1v3.5a1 1 0 01-1 1C12.4 21.82 2.18 11.6 2.18 3a1 1 0 011-1H6.7a1 1 0 011 1c0 1.27.2 2.47.57 3.58a1 1 0 01-.24 1.01l-2.2 2.2z"/>
            </svg>
            Zavolať teraz
          </a>
          <a href={`mailto:${EMAIL}`} class="btn btn-outline">
            <svg class="btn-icon" viewBox="0 0 24 24">
              <path d="M4 4h16a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2z"/>
              <polyline points="22,6 12,13 2,6"/>
            </svg>
            Napísať email
          </a>
        </div>
      </div>
    </div>
  </section>

  <style>
    /* =============== VARIABLES =============== */
    :root {
      --brand: #ff6b00;
      --brand-dark: #e85d00;
      --brand-light: #ff8533;
      --text: #ffffff;
      --text-dim: #b0b0b0;
      --text-muted: #888888;
      --bg: #0a0a0a;
      --bg-secondary: #111111;
      --bg-tertiary: #1a1a1a;
      --glass: rgba(255, 255, 255, 0.05);
      --glass-border: rgba(255, 255, 255, 0.1);
      --shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
      --shadow-heavy: 0 8px 30px rgba(0, 0, 0, 0.25);
      --border-radius: 12px;
      --transition: all 0.3s ease;
    }

    /* =============== LAYOUT =============== */
    .container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 0 24px;
    }

    .section-header {
      text-align: center;
      margin-bottom: 3rem;
    }

    .section-header h2 {
      font-size: clamp(2rem, 5vw, 3rem);
      font-weight: 800;
      margin-bottom: 0.5rem;
      background: linear-gradient(135deg, var(--brand), var(--brand-light));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .section-header p {
      font-size: 1.125rem;
      color: var(--text-dim);
      font-weight: 500;
    }

    /* =============== HERO SECTION =============== */
    .hero {
      position: relative;
      min-height: 50vh;
      display: flex;
      align-items: center;
      overflow: hidden;
    }

    .hero-bg {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: -2;
    }

    .hero-overlay {
      position: absolute;
      inset: 0;
      background: linear-gradient(
        135deg,
        rgba(10, 10, 10, 0.8) 0%,
        rgba(10, 10, 10, 0.6) 50%,
        rgba(10, 10, 10, 0.8) 100%
      );
      z-index: -1;
    }

    .hero-deco {
      position: absolute;
      opacity: 0.15;
      filter: drop-shadow(0 10px 30px rgba(255, 107, 0, 0.2));
      pointer-events: none;
    }

    .deco-left {
      left: -60px;
      bottom: -60px;
      width: min(40vw, 560px);
      transform: rotate(-8deg);
    }

    .deco-right {
      right: -50px;
      top: -40px;
      width: min(36vw, 480px);
      transform: scaleX(-1) rotate(8deg);
    }

    .hero-content {
      width: 100%;
      z-index: 1;
    }

    .hero-badge {
      display: inline-block;
      padding: 10px 20px;
      background: var(--glass);
      border: 1px solid var(--glass-border);
      border-radius: 50px;
      backdrop-filter: blur(10px);
      margin-bottom: 1.5rem;
      font-weight: 700;
      color: var(--brand);
    }

    .hero-title {
      font-size: clamp(2.5rem, 6vw, 4.5rem);
      font-weight: 900;
      line-height: 1.1;
      margin-bottom: 2rem;
      color: var(--text);
    }

    .accent {
      background: linear-gradient(135deg, var(--brand), var(--brand-light));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .benefits {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 16px;
      margin: 0 0 2.5rem;
      padding: 0;
      list-style: none;
    }

    .benefits li {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 16px 20px;
      background: var(--glass);
      border: 1px solid var(--glass-border);
      border-radius: var(--border-radius);
      backdrop-filter: blur(10px);
      font-weight: 600;
      color: var(--text);
      transition: var(--transition);
    }

    .benefits li:hover {
      transform: translateY(-2px);
      border-color: var(--brand);
      box-shadow: var(--shadow);
    }

    .benefit-icon {
      width: 20px;
      height: 20px;
      fill: var(--brand);
      flex-shrink: 0;
    }

    .hero-cta {
      display: flex;
      flex-wrap: wrap;
      gap: 16px;
      margin-bottom: 2rem;
    }

    .address {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 16px 20px;
      background: var(--glass);
      border: 1px solid var(--glass-border);
      border-radius: var(--border-radius);
      backdrop-filter: blur(10px);
      width: fit-content;
      transition: var(--transition);
    }

    .address:hover {
      border-color: var(--brand);
    }

    .address-icon {
      width: 20px;
      height: 20px;
      fill: var(--brand);
      flex-shrink: 0;
    }

    .address a {
      color: var(--text);
      text-decoration: none;
      font-weight: 600;
    }

    /* =============== BUTTONS =============== */
    .btn {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 14px 24px;
      border-radius: var(--border-radius);
      text-decoration: none;
      font-weight: 700;
      font-size: 15px;
      transition: var(--transition);
    }

    .btn-primary {
      background: linear-gradient(135deg, var(--brand), var(--brand-light));
      color: #000;
      box-shadow: var(--shadow);
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-heavy);
    }

    .btn-secondary {
      background: var(--glass);
      border: 1px solid var(--glass-border);
      color: var(--text);
      backdrop-filter: blur(10px);
    }

    .btn-secondary:hover {
      background: rgba(255, 107, 0, 0.1);
      border-color: var(--brand);
      transform: translateY(-2px);
    }

    .btn-outline {
      background: transparent;
      border: 2px solid var(--brand);
      color: var(--brand);
    }

    .btn-outline:hover {
      background: var(--brand);
      color: #000;
      transform: translateY(-2px);
    }

    .btn-icon {
      width: 18px;
      height: 18px;
      fill: currentColor;
    }

    /* =============== WAVE TRANSITIONS =============== */
    .section-wave,
    .section-wave-top {
      position: relative;
